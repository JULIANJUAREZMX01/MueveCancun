{
  "name": "cancunmueve-pwa",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "dev:network": "astro dev --host",
    "build": "pnpm run check-wasm && astro build",
    "astro": "astro",
    "lint": "eslint .",
    "test": "vitest",
    "build:wasm": "pnpm run build:wasm:route && pnpm run build:wasm:spatial && pnpm run sync-wasm",
    "build:wasm:route": "cd rust-wasm/route-calculator && wasm-pack build --target web --out-dir ../../src/wasm/route-calculator",
    "build:wasm:spatial": "cd rust-wasm/spatial-index && wasm-pack build --target web --out-dir ../../src/wasm/spatial-index",
    "sync-wasm": "mkdir -p public/wasm && cp -r src/wasm/* public/wasm/",
    "preview": "astro preview",
    "check-wasm": "node -e \"const fs=require('fs'); if(!fs.existsSync('./src/wasm/route-calculator/route_calculator_bg.wasm')) { console.error('❌ WASM binary missing! Run build:wasm first.'); process.exit(1); } else { console.log('✅ WASM binaries found.'); }\""
  },
  "dependencies": {
    "astro": "^5.16.15",
    "@astrojs/mdx": "^4.0.0",
    "@astrojs/rss": "^4.0.5",
    "@astrojs/sitemap": "^3.2.1",
    "@astrojs/tailwind": "^6.0.0",
    "@tailwindcss/typography": "^0.5.10",
    "@tailwindcss/vite": "^4.1.18",
    "clsx": "^2.1.0",
    "fuse.js": "^7.0.0",
    "idb": "^8.0.3",
    "lucide-react": "^0.563.0",
    "mapbox-gl": "^3.18.1",
    "sharp": "^0.33.2",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^24.10.1",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.18",
    "wasm-pack": "^0.14.0"
  }
}
