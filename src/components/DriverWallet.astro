---
import Card from './ui/Card.astro';
import Button from './ui/Button.astro';
import Badge from './ui/Badge.astro';
import TransactionRow from './ui/TransactionRow.astro';
import SkeletonLoader from './ui/SkeletonLoader.astro';
---

<div id="driver-wallet-container" class="space-y-6">

  <Card class="!bg-deep-navy text-white border-0 shadow-xl overflow-hidden relative">
    <!-- Background Texture -->
    <div class="absolute inset-0 opacity-10 bg-[radial-gradient(#fff_1px,transparent_1px)] [background-size:16px_16px]"></div>

    <div class="relative z-10">
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-sm font-bold uppercase tracking-widest text-slate-300">Saldo Disponible</h2>
            <Badge variant="success" class="bg-primary-500 text-white border-0">ACTIVO</Badge>
        </div>

        <div class="text-center mb-8">
             <div id="wallet-loading" class="animate-pulse h-12 w-32 bg-white/10 rounded mx-auto"></div>
             <div id="wallet-content" class="hidden">
                 <h1 class="text-5xl font-black tracking-tighter text-white">
                    $<span id="display-balance">0</span>
                 </h1>
                 <p class="text-sm font-medium text-slate-400 mt-2">MXN Peso Mexicano</p>
             </div>
        </div>

        <div class="grid grid-cols-2 gap-4">
            <Button variant="primary" id="top-up-trigger" class="w-full bg-primary-500 hover:bg-primary-400 text-white border-0">
                Recargar
            </Button>
            <Button variant="ghost" class="w-full text-white hover:bg-white/10 border-white/20" id="history-trigger">
                Historial
            </Button>
        </div>
    </div>
  </Card>

  <!-- Top Up Options (Hidden by default, toggled via JS) -->
  <div id="top-up-options" class="hidden animate-slide-up">
      <h3 class="text-sm font-bold text-slate-500 uppercase tracking-wider mb-3">Montos de Recarga</h3>
      <div class="grid grid-cols-3 gap-3">
          <button class="top-up-btn bg-white border-2 border-slate-200 rounded-xl py-4 font-black text-lg text-slate-700 hover:border-primary-500 hover:text-primary-600 transition-colors active:scale-95" data-amount="50">$50</button>
          <button class="top-up-btn bg-white border-2 border-slate-200 rounded-xl py-4 font-black text-lg text-slate-700 hover:border-primary-500 hover:text-primary-600 transition-colors active:scale-95" data-amount="100">$100</button>
          <button class="top-up-btn bg-white border-2 border-slate-200 rounded-xl py-4 font-black text-lg text-slate-700 hover:border-primary-500 hover:text-primary-600 transition-colors active:scale-95" data-amount="500">$500</button>
      </div>
  </div>

  <!-- History List -->
  <div id="history-section" class="hidden animate-slide-up">
      <div class="flex justify-between items-center mb-3">
        <h3 class="text-sm font-bold text-slate-500 uppercase tracking-wider">Ãšltimos Movimientos</h3>
      </div>
      <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-4 space-y-1">
          <TransactionRow date="HOY" description="Recarga Saldo" amount={100} type="credit" />
          <TransactionRow date="AYER" description="Ruta R1 - Zona Hotelera" amount={-15} />
          <TransactionRow date="AYER" description="Ruta R2 - Mercado 28" amount={-12} />
      </div>
  </div>

</div>

<script>
  const loader = document.getElementById('wallet-loading');
  const content = document.getElementById('wallet-content');
  const displayBalance = document.getElementById('display-balance');
  const topUpBtns = document.querySelectorAll('.top-up-btn');
  const container = document.getElementById('driver-wallet-container');

  const topUpTrigger = document.getElementById('top-up-trigger');
  const historyTrigger = document.getElementById('history-trigger');
  const topUpOptions = document.getElementById('top-up-options');
  const historySection = document.getElementById('history-section');

  topUpTrigger?.addEventListener('click', () => {
    topUpOptions?.classList.toggle('hidden');
    historySection?.classList.add('hidden');
  });

  historyTrigger?.addEventListener('click', () => {
    historySection?.classList.toggle('hidden');
    topUpOptions?.classList.add('hidden');
  });

  async function checkFunds(balance) {
      try {
          // Dynamic import to avoid build errors with Vite
          const wasm = await import('../wasm/route_calculator.js');
          await wasm.default();
          return wasm.validate_operator_funds(balance);
      } catch (e) {
          console.error("WASM Validation Error:", e);
          return balance >= 180.0;
      }
  }

  async function updateBalanceDisplay() {
    let currentBalance = 180.0;
    try {
        const stored = localStorage.getItem('user_balance');
        if (stored !== null) {
            currentBalance = parseFloat(stored);
        } else {
            localStorage.setItem('user_balance', currentBalance.toString());
        }
    } catch (e) {
        console.warn("Storage Error:", e);
    }

    if (displayBalance) {
        // Count up animation
        const start = parseInt(displayBalance.textContent || '0');
        const end = currentBalance;
        const duration = 1000;
        const startTime = performance.now();

        function update(currentTime) {
            const elapsed = currentTime - startTime;
            const progress = Math.min(elapsed / duration, 1);

            // Ease out quart
            const ease = 1 - Math.pow(1 - progress, 4);

            const current = start + (end - start) * ease;
            displayBalance.textContent = current.toFixed(0);

            if (progress < 1) {
                requestAnimationFrame(update);
            }
        }
        requestAnimationFrame(update);
    }

    if (loader) loader.classList.add('hidden');
    if (content) content.classList.remove('hidden');
  }

  topUpBtns.forEach(btn => {
    btn.addEventListener('click', async (e) => {
      const amount = parseInt((e.currentTarget).dataset.amount || '0');

      let currentBalance = 180.0;
      const stored = localStorage.getItem('user_balance');
      if (stored !== null) {
          currentBalance = parseFloat(stored);
      }
      currentBalance += amount;
      localStorage.setItem('user_balance', currentBalance.toString());

      await updateBalanceDisplay();

      if (window.showToast) window.showToast(`Recarga exitosa: +$${amount}`, 'success');
    });
  });

  updateBalanceDisplay();
</script>
