---
interface Props {
  mapboxToken?: string;
  center?: [number, number];
  zoom?: number;
}

const {
  center = [21.1619, -86.8515], // [lat, lng] for Leaflet
  zoom = 12
} = Astro.props;
---

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
<script is:inline src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>

<div class="relative w-full h-[500px] overflow-hidden rounded-xl border border-gray-200 shadow-inner">
  <div id="map-container" class="w-full h-full z-0" data-center={JSON.stringify(center)} data-zoom={zoom}></div>

  <div id="map-loader" class="absolute inset-0 flex items-center justify-center bg-gray-50 z-10">
    <div class="text-center">
      <div class="animate-spin rounded-full h-12 w-12 border-4 border-primary-500 border-t-transparent mx-auto mb-4"></div>
      <p class="text-gray-600 font-medium">Cargando mapa de Canc√∫nMueve...</p>
    </div>
  </div>
</div>

<script>
  const container = document.getElementById('map-container');
  const loader = document.getElementById('map-loader');

  function initMap() {
    if (!container || !window.L) return;

    // Check if map is already initialized
    if (container._leaflet_id) return;

    const center = JSON.parse(container.dataset.center);
    const zoom = parseFloat(container.dataset.zoom);

    const map = L.map('map-container').setView(center, zoom);

    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
        attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
    }).addTo(map);

    // Fetch coordinates
    fetch('/coordinates.json')
        .then(res => res.json())
        .then(data => {
            Object.keys(data).forEach(key => {
                const coords = data[key];
                // Check if coords is [lat, lng]
                if (Array.isArray(coords) && coords.length === 2) {
                     L.marker(coords).addTo(map)
                        .bindPopup(`<b>${key}</b>`);
                }
            });
            if (loader) loader.classList.add('hidden');
        })
        .catch(err => {
            console.error("Error loading coordinates:", err);
            if (loader) loader.innerText = "Error cargando datos.";
        });

    // Fix map size on resize/load
    setTimeout(() => { map.invalidateSize(); }, 100);
  }

  // Ensure script is loaded
  if (window.L) {
      initMap();
  } else {
      window.addEventListener('load', initMap);
  }

  // View Transitions support
  document.addEventListener('astro:page-load', () => {
      if (window.L) initMap();
  });
</script>
