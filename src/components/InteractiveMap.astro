---
interface Props {
  mapboxToken: string;
  center?: [number, number];
  zoom?: number;
}

const {
  mapboxToken,
  center = [-86.8515, 21.1619],
  zoom = 12
} = Astro.props;
---

<div class="relative w-full h-[500px] overflow-hidden rounded-xl border border-gray-200 shadow-inner">
  <div id="map-container" class="w-full h-full" data-token={mapboxToken} data-center={JSON.stringify(center)} data-zoom={zoom}></div>

  <div id="map-loader" class="absolute inset-0 flex items-center justify-center bg-gray-50 z-10">
    <div class="text-center">
      <div class="animate-spin rounded-full h-12 w-12 border-4 border-primary-500 border-t-transparent mx-auto mb-4"></div>
      <p class="text-gray-600 font-medium">Cargando mapa de CancúnMueve...</p>
    </div>
  </div>
</div>

<script>
  import mapboxgl from 'mapbox-gl';
  import 'mapbox-gl/dist/mapbox-gl.css';

  const container = document.getElementById('map-container');
  const loader = document.getElementById('map-loader');

  if (container) {
    const token = container.dataset.token;
    const center = JSON.parse(container.dataset.center);
    const zoom = parseFloat(container.dataset.zoom);

    mapboxgl.accessToken = token;

    const map = new mapboxgl.Map({
      container: 'map-container',
      style: 'mapbox://styles/mapbox/streets-v12',
      center: center,
      zoom: zoom,
    });

    map.addControl(new mapboxgl.NavigationControl(), 'top-right');

    map.addControl(
      new mapboxgl.GeolocateControl({
        positionOptions: { enableHighAccuracy: true },
        trackUserLocation: true,
        showUserHeading: true,
      }),
      'top-right'
    );

    map.on('load', async () => {
      try {
        const response = await fetch('/data/master_routes.json');
        const data = await response.json();

        data.rutas.forEach((route) => {
          if (route.geometry) {
            map.addSource(`route-${route.id}`, {
              type: 'geojson',
              data: route.geometry
            });

            map.addLayer({
              id: `route-${route.id}`,
              type: 'line',
              source: `route-${route.id}`,
              paint: {
                'line-color': route.color,
                'line-width': 4,
                'line-opacity': 0.8,
              }
            });
          } else if (route.paradas && route.paradas.length > 1) {
            const coordinates = route.paradas.map((s) => [s.lng, s.lat]);
            map.addSource(`route-${route.id}`, {
              type: 'geojson',
              data: {
                type: 'Feature',
                properties: {},
                geometry: {
                  type: 'LineString',
                  coordinates: coordinates
                }
              }
            });

            map.addLayer({
              id: `route-${route.id}`,
              type: 'line',
              source: `route-${route.id}`,
              paint: {
                'line-color': route.color,
                'line-width': 3,
                'line-opacity': 0.6,
                'line-dasharray': [2, 1]
              }
            });
          }

          if (route.paradas) {
            route.paradas.forEach((stop) => {
              const el = document.createElement('div');
              el.className = 'stop-marker';
              el.style.backgroundColor = route.color;
              el.style.width = '10px';
              el.style.height = '10px';
              el.style.borderRadius = '50%';
              el.style.border = '2px solid white';
              el.style.cursor = 'pointer';

              new mapboxgl.Marker(el)
                .setLngLat([stop.lng, stop.lat])
                .setPopup(
                  new mapboxgl.Popup({ offset: 25 }).setHTML(`
                    <div class="p-2">
                      <strong class="text-deep-navy">${stop.nombre}</strong><br>
                      <span class="text-xs text-gray-500">Ruta: ${route.id}</span><br>
                      <span class="text-sm font-bold text-primary-600">$${route.tarifa.toFixed(2)} MXN</span>
                    </div>
                  `)
                )
                .addTo(map);
            });
          }
        });

        if (loader) loader.classList.add('hidden');
        console.log('✅ Map loaded with routes');
      } catch (error) {
        console.error('Failed to load routes:', error);
      }
    });
  }
</script>
