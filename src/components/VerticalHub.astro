<div id="results-hub" class="flex flex-col h-full bg-transparent font-sans">
  <!-- Header -->
  <div class="p-4 border-b border-slate-200/50 dark:border-slate-700/50 flex items-center justify-between shrink-0">
    <h2 class="font-black text-sm uppercase tracking-wide text-slate-500 dark:text-slate-400">Resultados</h2>
    <button id="clear-results-btn" class="text-xs font-bold text-primary-500 hover:text-primary-600 transition-colors hidden">
       LIMPIAR
    </button>
  </div>

  <!-- Results List -->
  <div id="hub-results" class="flex-1 overflow-y-auto p-3 space-y-3 scrollbar-hide">
     <!-- Empty State -->
     <div class="h-full flex flex-col items-center justify-center text-center p-6 opacity-40">
        <div class="w-16 h-16 bg-slate-200 dark:bg-slate-700 rounded-full flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" /></svg>
        </div>
        <p class="text-sm font-bold text-slate-600 dark:text-slate-300">Sin bÃºsqueda activa</p>
        <p class="text-xs text-slate-400 mt-1">Ingresa origen y destino para ver rutas.</p>
     </div>
  </div>
</div>

<script>
  const resultsContainer = document.getElementById('hub-results');
  const clearBtn = document.getElementById('clear-results-btn');

  clearBtn?.addEventListener('click', () => {
      // Clear results logic
      if (resultsContainer) resultsContainer.innerHTML = '';
      clearBtn.classList.add('hidden');
      // Dispatch clear event if needed
      window.dispatchEvent(new CustomEvent('CLEAR_MAP'));
  });

  window.addEventListener('SEARCH_COMPLETED', (event) => {
      const { journeys, gap } = event.detail;
      const data = Array.isArray(event.detail) ? event.detail : (journeys || []);
      const gapData = event.detail.gap || null;

      renderResults(data, gapData);
      clearBtn?.classList.remove('hidden');
  });

  const TRANSPORT_LABELS = {
    "Bus": "AutobÃºs",
    "Combi": "Combi",
    "Van": "Van",
    "ADO": "ADO",
    "PlayaExpress": "Playa Express",
  };

  function getTransportLabel(type) {
    return TRANSPORT_LABELS[type] || type;
  }

  function renderResults(journeys, gapData) {
      if (!resultsContainer) return;
      resultsContainer.innerHTML = '';

      if (!journeys || journeys.length === 0) {
          let message = "No hay rutas pÃºblicas directas. Te sugerimos tomar un taxi.";
          if (gapData && gapData.recommendation === 'NoPublicCoverage') {
              message = "Zona fuera de cobertura pÃºblica.";
          }

          resultsContainer.innerHTML = `
            <div class="p-6 bg-white/50 dark:bg-slate-800/50 rounded-2xl border border-slate-200 dark:border-slate-700 text-center flex flex-col items-center">
                <div class="w-12 h-12 mb-3 bg-slate-100 dark:bg-slate-700 rounded-full flex items-center justify-center text-slate-400 opacity-50">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0" /></svg>
                </div>
                <h3 class="font-bold text-slate-800 dark:text-white mb-1">Transporte Privado</h3>
                <p class="text-xs text-slate-500 dark:text-slate-400">${message}</p>
            </div>
          `;
          return;
      }

      journeys.forEach((journey, index) => {
          const card = document.createElement('div');

          let typeClass = "border-slate-100 dark:border-slate-700 bg-white dark:bg-slate-800";
          let badge = "";

          if (index === 0) {
              typeClass = "border-emerald-200 dark:border-emerald-900 bg-emerald-50 dark:bg-emerald-900/10";
              badge = `<span class="absolute top-3 right-3 px-1.5 py-0.5 bg-emerald-100 dark:bg-emerald-900 text-emerald-700 dark:text-emerald-400 text-[10px] font-bold rounded uppercase tracking-wide">Ã“ptima</span>`;
          } else if (journey.type === 'Transfer') {
               badge = `<span class="absolute top-3 right-3 px-1.5 py-0.5 bg-orange-100 dark:bg-orange-900 text-orange-700 dark:text-orange-400 text-[10px] font-bold rounded uppercase tracking-wide">Transbordo</span>`;
          }

          card.className = `relative p-4 rounded-2xl shadow-sm border ${typeClass} cursor-pointer hover:shadow-md hover:scale-[1.02] transition-all active:scale-98 group mb-2`;

          const leg1 = journey.legs[0];
          const totalCost = journey.total_price;

          // Gap Info
          let gapInfo = "";
          if (gapData && gapData.origin_gap) {
               const dist = gapData.origin_gap.distance_km;
               const time = Math.round(dist * 15);
               if (dist > 0.1) {
                   gapInfo = `
                    <div class="flex items-center gap-1 text-slate-400 text-[10px] font-medium mt-1">
                        <span>ðŸš¶ Caminata ${time} min</span>
                    </div>
                   `;
               }
          }

          let content = `
             ${badge}
             <div class="flex items-start gap-3 mb-2">
                <div class="w-10 h-10 rounded-xl bg-slate-100 dark:bg-slate-700 flex items-center justify-center text-slate-500 dark:text-slate-300 shadow-inner">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0" /></svg>
                </div>
                <div>
                    <h4 class="font-bold text-slate-800 dark:text-white text-sm leading-tight pr-12">${leg1.name}</h4>
                    <span class="text-[10px] font-bold text-slate-400 uppercase tracking-wide">${getTransportLabel(leg1.transport_type)}</span>
                </div>
             </div>

             <div class="flex items-center justify-between mt-3 pt-3 border-t border-slate-100 dark:border-slate-700/50">
                <div class="flex flex-col">
                    <span class="text-[10px] text-slate-400 uppercase font-bold">Costo</span>
                    <span class="font-bold text-slate-900 dark:text-white">$${totalCost}</span>
                </div>
                 <div class="flex flex-col items-end">
                    ${gapInfo}
                </div>
             </div>
          `;

          if (journey.type === 'Transfer') {
               content += `
                 <div class="mt-2 text-[10px] text-orange-600 dark:text-orange-400 flex items-center gap-1 font-bold">
                    <span>ðŸ”„ Cambia en ${journey.transfer_point}</span>
                 </div>
               `;
          }

          card.innerHTML = content;

          card.addEventListener('mouseenter', () => {
              window.dispatchEvent(new CustomEvent('HIGHLIGHT_ROUTE', { detail: journey }));
          });

          card.addEventListener('click', () => {
              window.dispatchEvent(new CustomEvent('SHOW_ROUTE_ON_MAP', { detail: journey }));
              // On mobile, maybe collapse sheet slightly?
          });

          resultsContainer.appendChild(card);
      });
  }
</script>
