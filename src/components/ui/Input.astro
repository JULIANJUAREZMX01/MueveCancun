---
// âœ… TypeScript in Astro Frontmatter
interface Props {
  type?: 'text' | 'email' | 'password' | 'number' | 'search' | 'textarea';
  id?: string;
  name?: string;
  placeholder?: string;
  value?: string;
  list?: string;
  class?: string;
  label?: string;
  icon?: string; // URL to icon
  'aria-controls'?: string;
  'aria-expanded'?: boolean | string;
  required?: boolean;
  variant?: 'default' | 'floating';
}

const {
  type = 'text',
  id,
  name,
  placeholder,
  value,
  list,
  class: className,
  label,
  icon,
  'aria-controls': ariaControls,
  'aria-expanded': ariaExpanded,
  required = false,
  variant = 'default'
} = Astro.props;

// Determine if we should use the floating label behavior
const isFloating = variant === 'floating';
// For floating labels, we need a placeholder to trigger :placeholder-shown.
// If none provided, use a single space.
const inputPlaceholder = isFloating && !placeholder ? " " : placeholder;
---

<div class={`graffiti-input-wrapper ${variant} ${className || ''}`}>
  {label && (
    <label for={id} class="graffiti-label">
      {icon && <img src={icon} class="icon" alt="" />}
      {label}
    </label>
  )}
  <div class="input-container">
    {type === 'textarea' ? (
      <textarea
        id={id}
        name={name}
        placeholder={inputPlaceholder}
        class="graffiti-input textarea"
        required={required}
        aria-controls={ariaControls}
        aria-expanded={ariaExpanded}
      >{value}</textarea>
    ) : (
      <input
        type={type}
        id={id}
        name={name}
        placeholder={inputPlaceholder}
        value={value}
        list={list}
        required={required}
        aria-controls={ariaControls}
        aria-expanded={ariaExpanded}
        class="graffiti-input"
      />
    )}

    {/* Password Toggle (GraffitiWarrior Micro-UX) */}
    {type === 'password' && (
      <button
        type="button"
        id={`${id}-toggle`}
        class="password-toggle"
        aria-label="Toggle password visibility"
        tabindex="-1"
      >
        <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/></svg>
      </button>
    )}

    <slot name="action" />
  </div>
  <slot name="datalist" />
</div>

<script define:vars={{ id, type }}>
  if (type === 'password') {
    const toggle = document.getElementById(`${id}-toggle`);
    const input = document.getElementById(id);

    if (toggle && input) {
      toggle.addEventListener('click', () => {
        const isPassword = input.type === 'password';
        input.type = isPassword ? 'text' : 'password';

        // Update Icon
        const icon = toggle.querySelector('.icon');
        if (icon) {
            icon.textContent = isPassword ? 'visibility_off' : 'visibility';
        }

        // Focus back to input for better UX
        input.focus();
      });
    }
  }
</script>

<style>
  /*
   * GRAFFITI WARRIOR: CSS5 Logic
   * Now using Global Tropical Tokens
   */
  .graffiti-input-wrapper {
    width: 100%;
    position: relative;

    /* Label Styling */
    .graffiti-label {
      display: flex;
      align-items: center;
      gap: 0.25rem;
      margin-bottom: 0.25rem;
      font-size: 0.875rem;
      font-weight: 500;
      color: var(--text-secondary); /* slate-500 */
      transition: all 0.2s ease;

      .icon {
        width: 1rem;
        height: 1rem;
      }
    }

    /* Input Container (relative for action slot positioning) */
    .input-container {
      position: relative;
    }

    /* Input Styling */
    .graffiti-input {
      width: 100%;
      min-height: 44px;
      padding: 0.75rem 1rem; /* py-3 px-4 */
      padding-right: 3rem; /* pr-12 for action slot space */

      background-color: var(--surface-elevated);
      border: 2px solid var(--border-light); /* slate-200 */
      border-radius: var(--radius-xl); /* rounded-xl */

      font-size: 1.125rem; /* text-lg */
      font-weight: 700;
      color: var(--text-primary); /* slate-900 */
      font-family: inherit;

      transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);

      &::placeholder {
        color: var(--text-tertiary); /* slate-300 */
        font-weight: 400;
        opacity: 1; /* Default visible */
        transition: opacity 0.2s ease;
      }

      &:focus-visible {
        outline: none;
        border-color: var(--color-sunset); /* primary-500 */
        box-shadow: 0 0 0 4px var(--color-sunset-light); /* primary-100 */
      }

      &.textarea {
        min-height: 8rem;
        resize: vertical;
        line-height: 1.5;
      }

      /* Native Validation Feedback */
      &:user-invalid {
        border-color: var(--color-coral); /* danger-500 */
        box-shadow: 0 0 0 4px color-mix(in srgb, var(--color-coral) 20%, transparent);
      }
    }

    /* Password Toggle Button */
    .password-toggle {
        position: absolute;
        right: 0.75rem;
        top: 50%;
        transform: translateY(-50%);
        padding: 0.5rem;
        border-radius: 9999px; /* full */
        color: var(--text-tertiary);
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        background: transparent;
        border: none;
        cursor: pointer;

        &:hover {
            background-color: var(--surface-hover, rgba(0,0,0,0.05));
            color: var(--text-primary);
        }

        .icon {
            font-size: 1.25rem;
        }
    }

    /* Focus Within State using :has() to style Label */
    &:has(.graffiti-input:focus-visible) .graffiti-label {
      color: var(--color-sunset);
    }

    /* Invalid State Label */
    &:has(.graffiti-input:user-invalid) .graffiti-label {
      color: var(--color-coral);
    }

    /*
     * FLOATING VARIANT
     */
    &.floating {
      margin-top: 0.5rem;

      .graffiti-label {
        position: absolute;
        left: 1rem;
        top: 0.8rem;
        z-index: 10;
        margin-bottom: 0;
        transform-origin: left top;
        pointer-events: none; /* crucial for floating label click-through */
      }

      /* Hide placeholder initially in floating mode */
      .graffiti-input::placeholder {
         opacity: 0;
      }

      /* Reveal placeholder on focus */
      .graffiti-input:focus-visible::placeholder {
         opacity: 1;
      }

      /* Float logic */
      &:has(.graffiti-input:focus-visible),
      &:has(.graffiti-input:not(:placeholder-shown)) {
        .graffiti-label {
          transform: translateY(-1.5rem) scale(0.85);
          background: var(--surface-bg);
          padding: 0 0.25rem;
          font-weight: 600;
        }
      }
    }
  }
</style>
