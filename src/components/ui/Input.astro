---
// ✅ TypeScript in Astro Frontmatter
interface Props {
  type?: 'text' | 'email' | 'password' | 'number' | 'search' | 'textarea';
  id?: string;
  name?: string;
  placeholder?: string;
  value?: string;
  list?: string;
  class?: string;
  label?: string;
  icon?: string; // URL to icon
  'aria-controls'?: string;
  'aria-expanded'?: boolean | string;
  required?: boolean;
  variant?: 'default' | 'floating';
  maxlength?: number;
}

const {
  type = 'text',
  id,
  name,
  placeholder,
  value,
  list,
  class: className,
  label,
  icon,
  'aria-controls': ariaControls,
  'aria-expanded': ariaExpanded,
  required = false,
  variant = 'default',
  maxlength
} = Astro.props;

// Determine if we should use the floating label behavior
const isFloating = variant === 'floating';
// For floating labels, we need a placeholder to trigger :placeholder-shown.
// If none provided, use a single space.
const inputPlaceholder = isFloating && !placeholder ? " " : placeholder;
---

<div class={`graffiti-input-wrapper ${variant} ${className || ''}`}>
  {label && (
    <label for={id} class="graffiti-label">
      {icon && <img src={icon} class="icon" alt="" />}
      {label}
    </label>
  )}
  <div class="input-container">
    {type === 'textarea' ? (
      <textarea
        id={id}
        name={name}
        placeholder={inputPlaceholder}
        class="graffiti-input textarea"
        required={required}
        aria-controls={ariaControls}
        aria-expanded={ariaExpanded}
        maxlength={maxlength}
      >{value}</textarea>
    ) : (
      <input
        type={type}
        id={id}
        name={name}
        placeholder={inputPlaceholder}
        value={value}
        list={list}
        required={required}
        aria-controls={ariaControls}
        aria-expanded={ariaExpanded}
        class="graffiti-input"
        maxlength={maxlength}
      />
    )}

    {/* Password Toggle (GraffitiWarrior Micro-UX: CSS Logic) */}
    {type === 'password' && (
      <button
        type="button"
        id={`${id}-toggle`}
        class="password-toggle"
        aria-label="Toggle password visibility"
        tabindex="-1"
      >
        <!-- Icon: Eye (Show Password) - Default Visible -->
        <svg class="icon icon-eye" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
        </svg>

        <!-- Icon: Eye Off (Hide Password) - Hidden by CSS initially -->
        <svg class="icon icon-eye-off" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true" style="display: none;">
          <path d="M12 7c2.76 0 5 2.24 5 5 0 .65-.13 1.26-.36 1.83l2.92 2.92c1.51-1.26 2.7-2.89 3.43-4.75-1.73-4.39-6-7.5-11-7.5-1.4 0-2.74.25-3.98.7l2.16 2.16C10.74 7.13 11.35 7 12 7zM2 4.27l2.28 2.28.46.46A11.804 11.804 0 001 12c1.73 4.39 6 7.5 11 7.5 1.55 0 3.03-.3 4.38-.84l.42.42L19.73 22 21 20.73 3.27 3 2 4.27zM7.53 9.8l1.55 1.55c-.05.21-.08.43-.08.65 0 1.66 1.34 3 3 3 .22 0 .44-.03.65-.08l1.55 1.55c-.67.33-1.41.53-2.2.53-2.76 0-5-2.24-5-5 0-.79.2-1.53.53-2.2zm4.31-.78l3.15 3.15.02-.16c0-1.66-1.34-3-3-3l-.17.01z"/>
        </svg>
      </button>
    )}

    <slot name="action" />
  </div>
  <slot name="datalist" />
</div>

<script define:vars={{ id, type }}>
  if (type === 'password') {
    const toggle = document.getElementById(`${id}-toggle`);
    const input = document.getElementById(id);

    if (toggle && input) {
      toggle.addEventListener('click', () => {
        // Toggle input type only. CSS handles the icon swap.
        const isPassword = input.type === 'password';
        input.type = isPassword ? 'text' : 'password';

        // Focus back to input for better UX
        input.focus();
      });
    }
  }
</script>

<style>
  /*
   * GRAFFITI WARRIOR: CSS5 Logic
   * Now using Global Tropical Tokens
   */
  .graffiti-input-wrapper {
    width: 100%;
    position: relative;

    /* Label Styling */
    .graffiti-label {
      display: flex;
      align-items: center;
      gap: 0.25rem;
      margin-bottom: 0.25rem;
      font-size: 0.875rem;
      font-weight: 500;
      color: var(--text-secondary); /* slate-500 */
      transition: all 0.2s ease;

      .icon {
        width: 1rem;
        height: 1rem;
      }
    }

    /* Input Container (relative for action slot positioning) */
    .input-container {
      position: relative;
    }

    /* Input Styling */
    .graffiti-input {
      width: 100%;
      min-height: 44px;
      padding: 0.75rem 1rem;
      padding-right: 3rem; /* pr-12 for action slot space */

      background-color: #f1f5f9; /* slate-100 — subtle gray pill bg */
      border: 2px solid transparent;
      border-radius: var(--radius-full); /* pill-shaped */

      font-size: 1rem;
      font-weight: 600;
      color: var(--text-primary);
      font-family: inherit;

      transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);

      &::placeholder {
        color: var(--text-tertiary);
        font-weight: 400;
        opacity: 1;
        transition: opacity 0.2s ease;
      }

      &:focus-visible {
        outline: none;
        border-color: var(--color-primary);
        box-shadow: 0 0 0 3px rgba(13, 148, 136, 0.15);
        background-color: var(--color-white);
      }

      &.textarea {
        min-height: 8rem;
        resize: vertical;
        line-height: 1.5;
        border-radius: var(--radius-lg);
      }

      /* Native Validation Feedback */
      &:user-invalid {
        border-color: var(--color-coral);
        box-shadow: 0 0 0 3px color-mix(in srgb, var(--color-coral) 15%, transparent);
      }
    }

    /* Password Toggle Button */
    .password-toggle {
        position: absolute;
        right: 0.75rem;
        top: 50%;
        transform: translateY(-50%);
        padding: 0.5rem;
        border-radius: 9999px; /* full */
        color: var(--text-tertiary);
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        background: transparent;
        border: none;
        cursor: pointer;

        &:hover {
            background-color: var(--surface-hover, rgba(0,0,0,0.05));
            color: var(--text-primary);
        }

        .icon {
            font-size: 1.25rem;
        }
    }

    /*
     * GraffitiWarrior Magic: CSS-Driven Icon Toggle
     * Uses sibling combinator (~) to detect input state.
     */

    /* When input is 'text' (revealed): Hide Eye, Show Eye Off */
    &:has(.graffiti-input[type="text"]) .password-toggle .icon-eye {
        display: none;
    }

    &:has(.graffiti-input[type="text"]) .password-toggle .icon-eye-off {
        display: block !important; /* Override inline style */
    }

    /* Focus Within State using :has() to style Label */
    &:has(.graffiti-input:focus-visible) .graffiti-label {
      color: var(--color-primary);
    }

    /* Invalid State Label */
    &:has(.graffiti-input:user-invalid) .graffiti-label {
      color: var(--color-coral);
    }

    /*
     * FLOATING VARIANT
     */
    &.floating {
      margin-top: 0.5rem;

      .graffiti-label {
        position: absolute;
        left: 1rem;
        top: 0.8rem;
        z-index: 10;
        margin-bottom: 0;
        transform-origin: left top;
        pointer-events: none; /* crucial for floating label click-through */
      }

      /* Hide placeholder initially in floating mode */
      .graffiti-input::placeholder {
         opacity: 0;
      }

      /* Reveal placeholder on focus */
      .graffiti-input:focus-visible::placeholder {
         opacity: 1;
      }

      /* Float logic */
      &:has(.graffiti-input:focus-visible),
      &:has(.graffiti-input:not(:placeholder-shown)) {
        .graffiti-label {
          transform: translateY(-1.5rem) scale(0.85);
          background: #f1f5f9;
          padding: 0 0.25rem;
          font-weight: 600;
        }
      }

      /* When focused, label bg should match focused input bg */
      &:has(.graffiti-input:focus-visible) .graffiti-label {
        background: var(--color-white);
      }
    }
  }
</style>
