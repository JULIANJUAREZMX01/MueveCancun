---
interface Props {
  id?: string;
  class?: string;
  initialValue?: number;
}

const { id = 'passenger-selector', class: className, initialValue = 3 } = Astro.props;
---

<div class:list={["passenger-selector-wrapper", className]}>
  <label class="label-text" for={id}>PASAJEROS</label>

  <button
    id={id}
    class="selector-trigger"
    popovertarget={`${id}-menu`}
    style={`anchor-name: --${id}-anchor`}
    type="button"
  >
    <span id={`${id}-display`}>{initialValue} Pasajero{initialValue > 1 ? 's' : ''}</span>
    <span class="material-icons-round arrow">expand_more</span>
  </button>

  <div
    id={`${id}-menu`}
    popover
    class="selector-menu"
    style={`position-anchor: --${id}-anchor`}
  >
    <form class="options-list">
      {[1, 2, 3, 4, 5, 6].map((num) => (
        <label class="option-item">
          <input
            type="radio"
            name="passengers"
            value={num.toString()}
            checked={num === initialValue}
            onclick={`
              document.getElementById('${id}-display').textContent = '${num} Pasajero${num > 1 ? 's' : ''}';
              this.closest('[popover]').hidePopover();
            `}
          />
          <span class="check-icon material-icons-round">check</span>
          <span class="option-text">{num} Pasajero{num > 1 ? 's' : ''}</span>
        </label>
      ))}
    </form>
  </div>
</div>

<style>
  .passenger-selector-wrapper {
    display: flex;
    flex-direction: column;
    /* Styles copied/adapted from home.astro .passengers-selector */
    background-color: rgba(255, 255, 255, 0.5);
    border: 1px solid #E5E7EB;
    border-radius: 0.75rem;
    padding: 0.5rem 0.75rem;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .passenger-selector-wrapper:hover {
    background-color: rgba(255, 255, 255, 0.7);
  }

  .label-text {
    font-size: 10px;
    color: #6B7280;
    text-transform: uppercase;
    font-weight: 700;
    letter-spacing: 0.05em;
    display: block;
    pointer-events: none;
    margin-bottom: 2px;
  }

  .selector-trigger {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    background: transparent;
    border: none;
    padding: 0;
    font-size: 0.875rem;
    font-weight: 600;
    color: #111827;
    cursor: pointer;
    font-family: inherit;
    outline: none;
  }

  .arrow {
    color: #9CA3AF;
    font-size: 1rem;
    transition: transform 0.2s;
  }

  /* Open state style hook using :has */
  .selector-trigger:has(+ [popover]:popover-open) .arrow {
    transform: rotate(180deg);
  }

  /* Popover Menu */
  .selector-menu {
    margin: 0;
    padding: 0.5rem;
    border: 1px solid #E5E7EB;
    border-radius: 0.75rem;
    background: white;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);

    /* Anchor Positioning Logic */
    width: anchor-size(width); /* Match trigger width */
    top: anchor(bottom);
    left: anchor(left);

    /* Animation */
    opacity: 0;
    transform: translateY(-10px);
    transition: opacity 0.2s, transform 0.2s, display 0.2s allow-discrete;
  }

  .selector-menu:popover-open {
    opacity: 1;
    transform: translateY(4px); /* small gap */
    @starting-style {
      opacity: 0;
      transform: translateY(-10px);
    }
  }

  /* Options */
  .options-list {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .option-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: background-color 0.1s;
    user-select: none;
  }

  .option-item:hover {
    background-color: #F3F4F6;
  }

  .option-item:has(input:checked) {
    background-color: #EFF6FF; /* blue-50 */
    color: #1D4ED8; /* blue-700 */
  }

  .option-item input {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
  }

  .check-icon {
    font-size: 1rem;
    color: transparent;
    width: 1rem;
  }

  .option-item:has(input:checked) .check-icon {
    color: #2563EB; /* blue-600 */
  }

  .option-text {
    font-size: 0.875rem;
    font-weight: 500;
  }
</style>
