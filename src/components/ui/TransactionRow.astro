---
interface Props {
  date: string;
  description: string;
  amount: number;
  type?: 'credit' | 'debit';
}

const { date, description, amount, type = 'debit' } = Astro.props;
const isCredit = type === 'credit';
const amountClass = isCredit ? 'text-green-600' : 'text-gray-900';
const sign = isCredit ? '+' : '-';
---

<div class="flex items-center justify-between py-3 border-b border-slate-100 last:border-0 hover:bg-slate-50 transition-colors px-2 -mx-2 rounded-lg">
  <div class="flex flex-col min-w-[60px]">
    <span class="text-xs font-bold text-slate-400 uppercase">{date}</span>
  </div>

  <div class="flex-1 px-4">
    <span class="text-sm font-bold text-slate-700 block truncate">{description}</span>
  </div>

  <div class={`text-right font-black ${amountClass}`}>
    {sign}${Math.abs(amount).toFixed(2)}
  </div>
</div>
