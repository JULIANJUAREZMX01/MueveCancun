---
import { ClientRouter } from 'astro:transitions';
import { Image } from 'astro:assets';
import backgroundImg from '../assets/background.jpg';

interface Props {
	title?: string;
}

const { title = 'Canc√∫nMueve' } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Material+Icons+Round&family=Material+Icons+Outlined&family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0&display=swap" rel="stylesheet">
		<ClientRouter />
	</head>
	<body>
		<Image id="persistent-map-bg" src={backgroundImg} alt="" fetchpriority="high" loading="eager" transition:persist />
		<div id="app-content">
			<slot />
		</div>
	</body>
</html>

<style is:global>
	:root {
		--color-primary: #00A9E0; /* Brand Turquoise */
		--color-secondary: #FF6A00; /* Deep Orange */
		--color-bg-light: #F8FAFC;
		--color-bg-dark: #0F172A;
		--color-text-main: #111827;
		--color-text-muted: #64748B;
		--color-white: #FFFFFF;
		--font-family: 'Inter', sans-serif;
		--shadow-glass: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
	}

	html, body {
		margin: 0;
		padding: 0;
		font-family: var(--font-family);
		width: 100%;
		height: 100%;
		overflow: hidden; /* Prevent scrolling on body, handle in content */
		background-color: var(--color-bg-light);
		color: var(--color-text-main);
	}

	body {
		position: relative;
	}

	/* Reset box sizing */
	*, *::before, *::after {
		box-sizing: border-box;
	}
</style>

<style>
	#persistent-map-bg {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 0;
		object-fit: cover;
		opacity: 0.9; /* Adjust based on design needs */
		filter: grayscale(20%);
	}

	#app-content {
		position: relative;
		z-index: 10;
		width: 100%;
		height: 100%;
		overflow-y: auto; /* Allow scrolling within the page content */
	}
</style>
