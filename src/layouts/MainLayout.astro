---
import { ClientRouter } from 'astro:transitions';
import '../index.css';
import Toast from '../components/ui/Toast.astro';
import BottomNav from '../components/BottomNav.astro';
import BrandAnimation from '../components/ui/BrandAnimation.astro';
import { getLangFromUrl, useTranslations } from '../lib/i18n';

interface Props {
  title: string;
  description?: string;
  image?: string;
  useMap?: boolean;
  hideNav?: boolean;
}

const {
  title,
  description = "La app oficial de transporte público para Cancún y Riviera Maya.",
  image = "/og-image.png",
  useMap = false,
  hideNav = false
} = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const pathname = Astro.url.pathname;

const navItems = [
  { href: `/${lang}/home`, label: t('nav.home'), icon: 'explore', activePattern: new RegExp(`^/${lang}/home`) },
  { href: `/${lang}/rutas`, label: t('nav.routes'), icon: 'route', activePattern: new RegExp(`^/${lang}/rutas`) },
  { href: `/${lang}/mapa`, label: t('nav.map'), icon: 'map', activePattern: new RegExp(`^/${lang}/mapa`) },
  { href: `/${lang}/community`, label: t('nav.community'), icon: 'forum', activePattern: new RegExp(`^/${lang}/community`) },
  { href: `/${lang}/wallet`, label: t('nav.wallet'), icon: 'account_balance_wallet', activePattern: new RegExp(`^/${lang}/wallet`) },
  { href: `/${lang}/about`, label: t('nav.about'), icon: 'info', activePattern: new RegExp(`^/${lang}/about`) },
];
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&family=Poppins:wght@400;700;900&display=swap" rel="stylesheet">

    <meta name="generator" content={Astro.generator} />
    <title>{title} | CancúnMueve</title>
    <meta name="description" content={description} />
    <meta property="og:image" content={image} />

    <!-- PWA -->
    <meta name="theme-color" content="#F97316" />
    <link rel="manifest" href="/manifest.json" />
    <link rel="apple-touch-icon" href="/icons/pwa-192x192.png" />

    <script is:inline>
      // Theme Initialization
      function applyTheme() {
          const theme = localStorage.getItem("theme");
          const systemDark = window.matchMedia("(prefers-color-scheme: dark)").matches;

          if (theme === "dark" || (!theme && systemDark)) {
            document.documentElement.classList.add("dark");
          } else {
            document.documentElement.classList.remove("dark");
          }
      }
      applyTheme();
      document.addEventListener('astro:after-swap', applyTheme);
    </script>
    <ClientRouter />
  </head>
  <body class="bg-slate-50 dark:bg-slate-950 min-h-screen text-slate-900 dark:text-slate-100 font-sans antialiased transition-colors duration-300">

    <!-- ═══ Unified Header (Responsive) ═══ -->
    { !hideNav && (
    <header class="fixed top-0 left-0 right-0 z-40 h-14 md:h-16 px-4 md:px-6 flex items-center justify-between transition-colors duration-300 app-header">

      <a href={`/${lang}/home`} class="flex items-center gap-2.5 no-underline group outline-none">
        <div class="w-8 h-8 bg-primary-500 rounded-xl flex items-center justify-center shadow-md shadow-primary-500/20 group-hover:scale-105 transition-transform">
          <span class="material-symbols-rounded text-white text-lg" style="font-variation-settings: 'FILL' 1;">directions_bus</span>
        </div>
        <!-- Animated Brand -->
        <BrandAnimation />
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-1">
        {navItems.map(item => (
            <a href={item.href}
               class:list={[
                 'flex items-center gap-1.5 px-3 py-1.5 rounded-xl text-sm font-bold transition-all no-underline',
                 item.activePattern.test(pathname)
                   ? 'bg-primary-50 dark:bg-primary-900/20 text-primary-600 dark:text-primary-400'
                   : 'text-slate-500 dark:text-slate-400 hover:text-slate-900 dark:hover:text-white hover:bg-slate-100 dark:hover:bg-slate-800'
               ]}>
              <span class="material-symbols-rounded text-lg" style="font-variation-settings: 'FILL' 1;">{item.icon}</span>
              <span>{item.label}</span>
            </a>
        ))}
      </nav>

      <!-- Controls -->
      <div class="flex items-center gap-2">
         <button id="lang-switch-btn" class="w-9 h-9 rounded-xl flex items-center justify-center transition-all hover:bg-slate-100 dark:hover:bg-slate-800 text-xs font-black uppercase tracking-wider text-slate-500" data-current={lang}>
            {lang === 'es' ? 'EN' : 'ES'}
         </button>
         <button class="theme-toggle w-9 h-9 rounded-xl flex items-center justify-center transition-all hover:bg-slate-100 dark:hover:bg-slate-800"
                 style="color: var(--text-secondary);">
            <span class="material-symbols-rounded text-xl sun hidden dark:block">light_mode</span>
            <span class="material-symbols-rounded text-xl moon block dark:hidden">dark_mode</span>
         </button>
      </div>
    </header>
    )}

    <!-- ═══ Main Content ═══ -->
    <main class:list={[
      'w-full max-w-lg mx-auto lg:max-w-7xl min-h-screen',
      !hideNav && 'pt-16 pb-24 md:pb-0' // Adjust padding for navs
    ]}>
      <slot />
    </main>

    <!-- ═══ Bottom Nav (Mobile Only) ═══ -->
    { !hideNav && (
      <div class="md:hidden">
        <BottomNav />
      </div>
    )}

    <Toast />

    <!-- PWA Toast -->
    <div id="pwa-update-toast" class="hidden fixed z-50 bottom-20 left-4 right-4 animate-slide-up">
      <div class="glass-card p-4 flex items-center justify-between gap-4 bg-white dark:bg-slate-900 shadow-xl border border-slate-200 dark:border-slate-800 rounded-2xl">
        <div>
          <h4 class="font-bold text-sm">Actualización disponible</h4>
          <p class="text-xs text-slate-500">Nueva versión lista.</p>
        </div>
        <button id="pwa-refresh-btn" class="bg-primary-500 text-white px-3 py-1.5 rounded-lg text-xs font-bold">
            ACTUALIZAR
        </button>
      </div>
    </div>

    <script>
      /* Language Switch Logic */
      function setupLangSwitch() {
        const btn = document.getElementById('lang-switch-btn');
        if (!btn) return;

        btn.onclick = () => {
            const currentLang = btn.dataset.current;
            const targetLang = currentLang === 'es' ? 'en' : 'es';
            const currentPath = window.location.pathname;

            // Replace /es/ with /en/ or vice versa
            let newPath = currentPath.replace(`/${currentLang}`, `/${targetLang}`);

            // Handle root case if needed (though middleware handles it)
            if (newPath === currentPath) {
                newPath = `/${targetLang}/home`;
            }

            // Save preference
            document.cookie = `locale=${targetLang};path=/;max-age=31536000`;

            window.location.href = newPath;
        };
      }

      /* Service Worker & Theme Logic */
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js').then(reg => {
            if (reg.waiting) document.getElementById('pwa-update-toast')?.classList.remove('hidden');
            reg.addEventListener('updatefound', () => {
              const newWorker = reg.installing;
              newWorker.addEventListener('statechange', () => {
                if (newWorker.state === 'installed' && navigator.serviceWorker.controller) {
                    document.getElementById('pwa-update-toast')?.classList.remove('hidden');
                }
              });
            });
          });
        });
        let refreshing = false;
        navigator.serviceWorker.addEventListener('controllerchange', () => {
            if (refreshing) return;
            window.location.reload();
            refreshing = true;
        });
        document.getElementById('pwa-refresh-btn')?.addEventListener('click', () => {
            navigator.serviceWorker.ready.then(reg => {
                if (reg.waiting) reg.waiting.postMessage({ type: 'SKIP_WAITING' });
            });
        });
      }

      function setupThemeToggle() {
        const toggles = document.querySelectorAll('.theme-toggle');
        toggles.forEach(btn => {
          const newBtn = btn.cloneNode(true);
          btn.parentNode.replaceChild(newBtn, btn);
          newBtn.addEventListener('click', () => {
            document.documentElement.classList.toggle("dark");
            const isDark = document.documentElement.classList.contains("dark");
            localStorage.setItem("theme", isDark ? "dark" : "light");
          });
        });
      }

      document.addEventListener('astro:page-load', () => {
          setupThemeToggle();
          setupLangSwitch();
      });
    </script>

    <style>
      .app-header {
        background: transparent;
        backdrop-filter: none;
        -webkit-backdrop-filter: none;
        border-bottom: 1px solid transparent;
        animation: header-scroll linear forwards;
        animation-timeline: scroll();
        animation-range: 0px 50px;
      }

      @keyframes header-scroll {
        to {
          background: var(--surface-card);
          backdrop-filter: blur(16px);
          -webkit-backdrop-filter: blur(16px);
          border-bottom: 1px solid var(--border-light);
          box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        }
      }
    </style>
  </body>
</html>
