---
import MainLayout from '../layouts/MainLayout.astro';
import Container from '../components/Container.astro'; // Assuming Container exists or I'll use standard div

const title = "Comunidad";

// Mock Data
const REPORTS = [
  { user: "Juan Pérez", time: "Hace 5 min", type: "Tráfico", text: "Accidente en la entrada a Zona Hotelera, tomen precauciones.", location: "Km 0", votes: 12 },
  { user: "Maria G.", time: "Hace 20 min", type: "Demora", text: "La R-1 no está pasando por Crucero.", location: "El Crucero", votes: 5 },
  { user: "Sistema", time: "Hace 1 hora", type: "Noticia", text: "Nueva ruta R-2-94 ya disponible en la app.", location: "General", votes: 45 }
];
---

<MainLayout title={title}>
  <div class="pb-24 pt-6 px-4 max-w-lg mx-auto md:max-w-2xl">
    
    <!-- Header -->
    <div class="mb-6 flex items-center justify-between">
        <div>
            <h1 class="font-display font-black text-3xl text-slate-900 dark:text-white tracking-tight">Comunidad</h1>
            <p class="text-sm text-slate-500">Reportes en tiempo real</p>
        </div>
        <button class="bg-primary-500 text-white rounded-full w-10 h-10 flex items-center justify-center shadow-lg hover:scale-105 transition-transform">
            <span class="material-symbols-rounded">add</span>
        </button>
    </div>

    <!-- Feed -->
    <div class="space-y-4">
        {REPORTS.map(report => (
            <div class="glass-card p-4 animate-slide-up">
                <div class="flex items-start justify-between">
                    <div class="flex items-center gap-2">
                        <div class="w-8 h-8 rounded-full bg-slate-200 dark:bg-slate-700 flex items-center justify-center text-xs font-bold text-slate-600 dark:text-slate-300">
                            {report.user.charAt(0)}
                        </div>
                        <div>
                            <h4 class="text-sm font-bold text-slate-900 dark:text-white leading-none">{report.user}</h4>
                            <span class="text-[10px] text-slate-400 font-medium uppercase tracking-wide">{report.time} • {report.location}</span>
                        </div>
                    </div>
                    <span class={`px-2 py-0.5 rounded text-[10px] font-black uppercase tracking-wider ${
                        report.type === 'Tráfico' ? 'bg-red-100 text-red-600' :
                        report.type === 'Noticia' ? 'bg-blue-100 text-blue-600' :
                        'bg-orange-100 text-orange-600'
                    }`}>
                        {report.type}
                    </span>
                </div>

                <p class="mt-3 text-sm text-slate-600 dark:text-slate-300 leading-relaxed">
                    {report.text}
                </p>

                <div class="mt-4 flex items-center gap-4 border-t border-slate-100 dark:border-slate-800 pt-3">
                    <button class="flex items-center gap-1.5 text-slate-400 hover:text-primary-500 transition-colors text-xs font-bold">
                        <span class="material-symbols-rounded text-base">thumb_up</span>
                        {report.votes}
                    </button>
                    <button class="flex items-center gap-1.5 text-slate-400 hover:text-blue-500 transition-colors text-xs font-bold">
                        <span class="material-symbols-rounded text-base">chat_bubble</span>
                        Comentar
                    </button>
                    <div class="flex-1"></div>
                    <button class="text-slate-400 hover:text-slate-600 transition-colors">
                        <span class="material-symbols-rounded text-base">share</span>
                    </button>
                </div>
            </div>
        ))}
    </div>

    <!-- Empty State / Call to Action -->
    <div class="mt-8 text-center py-8 border-2 border-dashed border-slate-200 dark:border-slate-800 rounded-2xl">
        <span class="material-symbols-rounded text-4xl text-slate-300 mb-2">forum</span>
        <h3 class="font-bold text-slate-500">¿Viste algo?</h3>
        <p class="text-xs text-slate-400 max-w-xs mx-auto mt-1">Comparte reportes de tráfico, accidentes o cambios de ruta con la comunidad.</p>
    </div>

  </div>
</MainLayout>

<style>
  .glass-card {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.5);
    border-radius: 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
  }
  :global(.dark) .glass-card {
    background: rgba(15, 23, 42, 0.6);
    border-color: rgba(255, 255, 255, 0.1);
  }

  .animate-slide-up {
    animation: slideUp 0.4s ease-out forwards;
  }
  @keyframes slideUp {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
