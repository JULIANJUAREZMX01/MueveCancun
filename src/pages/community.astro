---
import MainLayout from '../layouts/MainLayout.astro';
import Container from '../components/Container.astro'; // Assuming Container exists or I'll use standard div

const title = "Comunidad";

// Mock Data
const REPORTS = [
  { user: "Juan Pérez", time: "Hace 5 min", type: "Tráfico", text: "Accidente en la entrada a Zona Hotelera, tomen precauciones.", location: "Km 0", votes: 12 },
  { user: "Maria G.", time: "Hace 20 min", type: "Demora", text: "La R-1 no está pasando por Crucero.", location: "El Crucero", votes: 5 },
  { user: "Sistema", time: "Hace 1 hora", type: "Noticia", text: "Nueva ruta R-2-94 ya disponible en la app.", location: "General", votes: 45 }
];
---

<MainLayout title={title}>
  <div class="pb-24 pt-6 px-4 max-w-lg mx-auto md:max-w-2xl">
    
    <!-- Header -->
    <div class="mb-6 flex items-center justify-between">
        <div>
            <h1 class="font-display font-black text-3xl text-slate-900 dark:text-white tracking-tight">Comunidad</h1>
            <p class="text-sm text-slate-500">Reportes en tiempo real</p>
        </div>
        <button class="bg-primary-500 text-white rounded-full w-10 h-10 flex items-center justify-center shadow-lg hover:scale-105 transition-transform" aria-label="Create new report">
            <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/></svg>
        </button>
    </div>

    <!-- Feed -->
    <div class="space-y-4">
        {REPORTS.map(report => (
            <div class="glass-card p-4 animate-slide-up">
                <div class="flex items-start justify-between">
                    <div class="flex items-center gap-2">
                        <div class="w-8 h-8 rounded-full bg-slate-200 dark:bg-slate-700 flex items-center justify-center text-xs font-bold text-slate-600 dark:text-slate-300">
                            {report.user.charAt(0)}
                        </div>
                        <div>
                            <h4 class="text-sm font-bold text-slate-900 dark:text-white leading-none">{report.user}</h4>
                            <span class="text-[10px] text-slate-400 font-medium uppercase tracking-wide">{report.time} • {report.location}</span>
                        </div>
                    </div>
                    <span class={`px-2 py-0.5 rounded text-[10px] font-black uppercase tracking-wider ${
                        report.type === 'Tráfico' ? 'bg-red-100 text-red-600' :
                        report.type === 'Noticia' ? 'bg-blue-100 text-blue-600' :
                        'bg-orange-100 text-orange-600'
                    }`}>
                        {report.type}
                    </span>
                </div>

                <p class="mt-3 text-sm text-slate-600 dark:text-slate-300 leading-relaxed">
                    {report.text}
                </p>

                <div class="mt-4 flex items-center gap-4 border-t border-slate-100 dark:border-slate-800 pt-3">
                    <button class="flex items-center gap-1.5 text-slate-400 hover:text-primary-500 transition-colors text-xs font-bold" aria-label="Like">
                        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M1 21h4V9H1v12zm22-11c0-1.1-.9-2-2-2h-6.31l.95-4.57.03-.32c0-.41-.17-.79-.44-1.06L14.17 1 7.59 7.59C7.22 7.95 7 8.45 7 9v10c0 1.1.9 2 2 2h9c.83 0 1.54-.5 1.84-1.22l3.02-7.05c.09-.23.14-.47.14-.73v-2z"/></svg>
                        {report.votes}
                    </button>
                    <button class="flex items-center gap-1.5 text-slate-400 hover:text-blue-500 transition-colors text-xs font-bold" aria-label="Comment">
                        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M21.99 4c0-1.1-.89-2-1.99-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h14l4 4-.01-18z"/></svg>
                        Comentar
                    </button>
                    <div class="flex-1"></div>
                    <button class="text-slate-400 hover:text-slate-600 transition-colors" aria-label="Share">
                        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M18 16.08c-.76 0-1.44.3-1.96.77L8.91 12.7c.05-.23.09-.46.09-.7s-.04-.47-.09-.7l7.05-4.11c.54.5 1.25.81 2.04.81 1.66 0 3-1.34 3-3s-1.34-3-3-3-3 1.34-3 3c0 .24.04.47.09.7L8.04 9.81C7.5 9.31 6.79 9 6 9c-1.66 0-3 1.34-3 3s1.34 3 3 3c.79 0 1.5-.31 2.04-.81l7.12 4.16c-.05.21-.08.43-.08.65 0 1.61 1.31 2.92 2.92 2.92 1.61 0 2.92-1.31 2.92-2.92s-1.31-2.92-2.92-2.92z"/></svg>
                    </button>
                </div>
            </div>
        ))}
    </div>

    <!-- Empty State / Call to Action -->
    <div class="mt-8 text-center py-8 border-2 border-dashed border-slate-200 dark:border-slate-800 rounded-2xl">
        <svg class="w-10 h-10 text-slate-300 mb-2" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M21 6h-2v9H6v2c0 .55.45 1 1 1h11l4 4V7c0-.55-.45-1-1-1zm-4 6V3c0-.55-.45-1-1-1H3c-.55 0-1 .45-1 1v14l4-4h10c.55 0 1-.45 1-1z"/></svg>
        <h3 class="font-bold text-slate-500">¿Viste algo?</h3>
        <p class="text-xs text-slate-400 max-w-xs mx-auto mt-1">Comparte reportes de tráfico, accidentes o cambios de ruta con la comunidad.</p>
    </div>

  </div>
</MainLayout>

<style>
  .glass-card {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.5);
    border-radius: 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
  }
  :global(.dark) .glass-card {
    background: rgba(15, 23, 42, 0.6);
    border-color: rgba(255, 255, 255, 0.1);
  }

  .animate-slide-up {
    animation: slideUp 0.4s ease-out forwards;
  }
  @keyframes slideUp {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
