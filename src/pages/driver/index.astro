---
import MainLayout from '../../layouts/MainLayout.astro';
import DriverWallet from '../../components/DriverWallet.astro';
import Card from '../../components/ui/Card.astro';
---

<MainLayout title="Mi Tarjeta">
  <div class="space-y-6 animate-fade-in pb-10">
    <header class="mb-6">
      <h1 class="text-3xl font-display font-black text-deep-navy tracking-tight mb-1">
        Mi <span class="text-primary-500">Tarjeta</span>
      </h1>
      <p class="text-slate-500 font-medium text-sm">Gestiona tu saldo y viajes.</p>
    </header>

    <DriverWallet />

    <div class="space-y-4">
      <h3 class="text-sm font-bold text-slate-400 uppercase tracking-widest px-1">Estadísticas Mensuales</h3>

      <div class="grid grid-cols-2 gap-4">
        <Card class="text-center py-6">
          <div class="text-3xl font-black text-deep-navy">12</div>
          <div class="text-[10px] text-slate-400 font-bold uppercase tracking-wider mt-1">Viajes</div>
        </Card>
        <Card class="text-center py-6">
          <div class="text-3xl font-black text-deep-navy">4.8</div>
          <div class="text-[10px] text-slate-400 font-bold uppercase tracking-wider mt-1">Rating</div>
        </Card>
      </div>

      <Card class="border-l-4 border-l-sky-500">
        <h3 class="text-sm font-bold text-deep-navy mb-2 flex items-center gap-2">
          <span>ℹ️</span> Instrucciones
        </h3>
        <ul class="text-sm text-slate-600 space-y-2 font-medium">
          <li class="flex gap-2 items-start"><span class="text-green-500">✓</span> Mantener el GPS activo.</li>
          <li class="flex gap-2 items-start"><span class="text-green-500">✓</span> Reportar cambios de tarifa.</li>
          <li class="flex gap-2 items-start"><span class="text-green-500">✓</span> Pagos solo en efectivo.</li>
        </ul>
      </Card>
    </div>
  </div>
</MainLayout>
