---
import MainLayout from '../layouts/MainLayout.astro';
import InteractiveMap from '../components/InteractiveMap.astro';
import RouteCalculator from '../components/RouteCalculator.astro';

const title = "Inicio";
---

<MainLayout title={title} useMap={true}>
    <!-- Full-screen Background Map -->
    <div class="fixed inset-0 z-0 h-full w-full">
        <InteractiveMap center={[21.1619, -86.8515]} zoom={13} />
    </div>

    <!-- Dashboard Overlay -->
	<div class="dashboard-container pointer-events-none">
		<div class="glass-panel-wrapper animate-fade-in-up pointer-events-auto flex flex-col items-center">

            <!-- Hero Headline (Restored) -->
            <div class="hero-headline mb-6 text-center">
                <h1 class="font-display font-black text-4xl md:text-5xl tracking-tight text-slate-900 drop-shadow-sm leading-tight">
                    ¿Qué ruta me lleva?
                    <span class="block text-primary-500">Cancún</span>
                </h1>
                <p class="text-sm font-bold text-slate-600 uppercase tracking-widest mt-2 bg-white/80 dark:bg-slate-900/60 backdrop-blur-sm px-3 py-1 rounded-full inline-block shadow-sm">
                    La guía oficial de transporte público
                </p>
            </div>

			<RouteCalculator />
		</div>
    </div>

</MainLayout>

<script>
    // Handle View Switching (Minimize/Maximize UI)
    window.addEventListener('VIEW_STATE_CHANGE', (e) => {
        const state = (e as CustomEvent).detail;
        const container = document.querySelector('.dashboard-container');
        if (!container) return;

        container.classList.remove('map-mode', 'map-maximized');

        if (state === 'MAP_ACTIVE' || state === 'map') {
            container.classList.add('map-mode');
        } else if (state === 'MAP_MAXIMIZED') {
            container.classList.add('map-maximized');
        }
    });
</script>

<style>
/* Dashboard Shell */
.dashboard-container {
    position: fixed;
    inset: 0;
    z-index: 10;
    display: flex;
    flex-direction: column;
    justify-content: flex-end; /* Mobile: Bottom aligned */
    padding: 1rem;
    padding-bottom: calc(5rem + env(safe-area-inset-bottom));
    pointer-events: none; /* Let clicks pass to map */
}

.glass-panel-wrapper {
    width: 100%;
    max-width: 480px;
    margin: 0 auto;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    pointer-events: auto; /* Catch clicks on form */
}

/* Hero Headline Styles */
.hero-headline {
    transition: opacity 0.3s ease, transform 0.3s ease;
}

/* Map Mode Adjustments (Hide Hero when searching/mapping) */
.dashboard-container.map-mode .hero-headline {
    opacity: 0;
    transform: translateY(-20px);
    pointer-events: none;
    height: 0;
    margin: 0;
    overflow: hidden;
}

.dashboard-container.map-mode .glass-panel-wrapper {
    transform: translateY(10%) scale(0.95);
    opacity: 0.95;
}

.dashboard-container.map-maximized .glass-panel-wrapper {
    transform: translateY(40%) scale(0.9);
    opacity: 0.8;
}

@media (min-width: 1024px) {
    .dashboard-container {
        justify-content: center; /* Desktop: Center aligned */
        align-items: flex-start;
        padding-left: 4rem; /* Offset for left-aligned layout if preferred */
        padding-top: 4rem;
    }
    
    .glass-panel-wrapper {
        margin: 0; /* Left align on desktop? Or center? User image shows centered-ish but maybe left column. */
        margin-left: 2rem;
    }
}

/* Animations */
@keyframes fade-in-up {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

.animate-fade-in-up {
    animation: fade-in-up 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
}
</style>
