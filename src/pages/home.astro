---
import MainLayout from '../layouts/MainLayout.astro';
import InteractiveMap from '../components/InteractiveMap.astro';
import RouteCalculator from '../components/RouteCalculator.astro';

const title = "Inicio";
---

<MainLayout title={title} useMap={true}>
    <!-- Full-screen Background Map -->
    <div class="fixed inset-0 z-0 h-full w-full">
        <InteractiveMap center={[21.1619, -86.8515]} zoom={13} />
    </div>

    <!-- Dashboard Overlay -->
	<div class="dashboard-container pointer-events-none">
		<div class="glass-panel-wrapper animate-fade-in-up pointer-events-auto flex flex-col items-center">

            <!-- Hero Headline — compact, doesn't overlap header -->
            <div class="hero-headline mb-4 text-center px-2">
                <h1 class="hero-title font-display font-black text-2xl sm:text-3xl md:text-4xl tracking-tight leading-tight">
                    ¿Qué Ruta Me Lleva?
                </h1>
                <p class="hero-destination font-display font-bold text-base sm:text-lg mt-1">
                    en <span id="destination-cycle" class="destination-text">Cancún</span>
                </p>
            </div>

			<RouteCalculator />
		</div>
    </div>

</MainLayout>

<script>
    // Animated destination cycling
    const destinations = ['Cancún', 'Puerto Morelos', 'Isla Mujeres', 'Playa del Carmen', 'Zona Hotelera'];
    let currentIndex = 0;
    const cycleEl = document.getElementById('destination-cycle');
    if (cycleEl) {
        setInterval(() => {
            cycleEl.classList.add('destination-exit');
            setTimeout(() => {
                currentIndex = (currentIndex + 1) % destinations.length;
                cycleEl.textContent = destinations[currentIndex];
                cycleEl.classList.remove('destination-exit');
                cycleEl.classList.add('destination-enter');
                setTimeout(() => cycleEl.classList.remove('destination-enter'), 400);
            }, 300);
        }, 3000);
    }

    // Handle View Switching (Minimize/Maximize UI)
    window.addEventListener('VIEW_STATE_CHANGE', (e) => {
        const state = (e as CustomEvent).detail;
        const container = document.querySelector('.dashboard-container');
        if (!container) return;

        container.classList.remove('map-mode', 'map-maximized');

        if (state === 'MAP_ACTIVE' || state === 'map') {
            container.classList.add('map-mode');
        } else if (state === 'MAP_MAXIMIZED') {
            container.classList.add('map-maximized');
        }
    });
</script>

<style>
/* Dashboard Shell */
.dashboard-container {
    position: fixed;
    inset: 0;
    z-index: 10;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 0.75rem;
    padding-top: calc(var(--header-h) + 0.5rem);
    padding-bottom: calc(var(--bottom-nav-h) + env(safe-area-inset-bottom) + 0.5rem);
    pointer-events: none;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}

.glass-panel-wrapper {
    width: 100%;
    max-width: 440px;
    margin: auto auto 0;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    pointer-events: auto;
}

/* Hero Headline Styles */
.hero-headline {
    transition: opacity 0.3s ease, transform 0.3s ease;
}

.hero-title {
    color: #F97316;
    text-shadow: 0 1px 8px rgba(0, 0, 0, 0.15);
    animation: hero-bounce-in 0.7s cubic-bezier(0.34, 1.56, 0.64, 1) both;
}

.hero-destination {
    color: var(--text-secondary);
    text-shadow: 0 1px 6px rgba(255, 255, 255, 0.6);
}

.dark .hero-destination {
    text-shadow: 0 1px 6px rgba(0, 0, 0, 0.5);
}

.destination-text {
    display: inline-block;
    color: #0d9488;
    font-weight: 800;
    transition: opacity 0.3s ease, transform 0.3s ease;
}

.destination-exit {
    opacity: 0;
    transform: translateY(-8px);
}

.destination-enter {
    animation: destination-pop 0.4s cubic-bezier(0.34, 1.56, 0.64, 1) both;
}

@keyframes destination-pop {
    0%   { opacity: 0; transform: translateY(8px); }
    100% { opacity: 1; transform: translateY(0); }
}

@keyframes hero-bounce-in {
    0%   { opacity: 0; transform: scale(0.9) translateY(12px); }
    60%  { transform: scale(1.02) translateY(-2px); }
    100% { opacity: 1; transform: scale(1) translateY(0); }
}

/* Map Mode Adjustments */
.dashboard-container.map-mode .hero-headline {
    opacity: 0;
    transform: translateY(-20px);
    pointer-events: none;
    height: 0;
    margin: 0;
    overflow: hidden;
}

.dashboard-container.map-mode .glass-panel-wrapper {
    transform: translateY(10%) scale(0.95);
    opacity: 0.95;
}

.dashboard-container.map-maximized .glass-panel-wrapper {
    transform: translateY(40%) scale(0.9);
    opacity: 0.8;
}

@media (min-width: 768px) {
    .dashboard-container {
        justify-content: center;
        align-items: flex-start;
        padding: 2rem;
        padding-top: calc(var(--header-h) + 2rem);
        padding-bottom: 2rem;
        overflow-y: auto;
    }

    .glass-panel-wrapper {
        margin: auto 0 auto 2rem;
        max-width: 420px;
    }
}

@media (min-width: 1280px) {
    .dashboard-container {
        padding-left: 4rem;
    }

    .glass-panel-wrapper {
        margin-left: 3rem;
    }
}

/* Animations */
@keyframes fade-in-up {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

.animate-fade-in-up {
    animation: fade-in-up 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
}

/* Search card subtle scale entrance */
.search-card {
    animation: card-enter 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.2s both;
}

@keyframes card-enter {
    from {
        opacity: 0;
        transform: scale(0.96) translateY(8px);
    }
    to {
        opacity: 1;
        transform: scale(1) translateY(0);
    }
}
</style>
