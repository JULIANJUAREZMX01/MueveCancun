---
import MainLayout from '../layouts/MainLayout.astro';
import InteractiveMap from '../components/InteractiveMap.astro';
import RouteCalculator from '../components/RouteCalculator.astro';

const title = "Dashboard";
---

<MainLayout title={title} useMap={true}>
    <!-- Full-screen Background Map -->
    <div class="fixed inset-0 z-0 h-full w-full">
        <InteractiveMap center={[21.1619, -86.8515]} zoom={13} />
    </div>

    <!-- Dashboard Overlay -->
	<div class="dashboard-container pointer-events-none">
		<div class="glass-panel-wrapper animate-fade-in-up pointer-events-auto">
			<RouteCalculator />
		</div>
    </div>

</MainLayout>

<script>
    // Handle View Switching (Minimize/Maximize UI)
    window.addEventListener('VIEW_STATE_CHANGE', (e) => {
        const state = (e as CustomEvent).detail;
        const container = document.querySelector('.dashboard-container');
        if (!container) return;

        container.classList.remove('map-mode', 'map-maximized');

        if (state === 'MAP_ACTIVE') {
            container.classList.add('map-mode');
        } else if (state === 'MAP_MAXIMIZED') {
            container.classList.add('map-maximized');
        }
    });
</script>

<style>
/* Dashboard Shell */
.dashboard-container {
    position: fixed;
    inset: 0;
    z-index: 10;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 1rem;
    padding-bottom: calc(5rem + env(safe-area-inset-bottom));
}

.glass-panel-wrapper {
    width: 100%;
    max-width: 480px;
    margin: 0 auto;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

/* Map Mode Adjustments */
.dashboard-container.map-mode .glass-panel-wrapper {
    transform: translateY(10%) scale(0.95);
    opacity: 0.95;
}

.dashboard-container.map-maximized .glass-panel-wrapper {
    transform: translateY(40%) scale(0.9);
    opacity: 0.8;
}

@media (min-width: 1024px) {
    .dashboard-container {
        justify-content: center;
        align-items: flex-start;
        padding-left: 2rem;
        padding-top: 2rem;
    }
    
    .glass-panel-wrapper {
        margin: 0;
    }
}

/* Animations */
@keyframes fade-in-up {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

.animate-fade-in-up {
    animation: fade-in-up 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
}
</style>
