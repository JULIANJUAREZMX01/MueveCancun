import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="CancúnMueve" hideNav={true}>
	<div class="splash-container">
		<div class="grid-overlay">
			<svg class="h-full w-full" xmlns="http://www.w3.org/2000/svg">
				<defs>
					<pattern height="40" id="grid" patternUnits="userSpaceOnUse" width="40">
						<path d="M 40 0 L 0 0 0 40" fill="none" stroke="white" stroke-width="1"></path>
					</pattern>
				</defs>
				<rect fill="url(#grid)" height="100%" width="100%"></rect>
			</svg>
		</div>

		<div class="top-spacer"></div>

		<div class="brand-section animate-float">
			<div class="brand-logo-container">
				<div class="brand-icon">
					<span class="material-symbols-rounded icon-bus">directions_bus</span>
				</div>
				<h1 class="brand-title">
					Cancún<span class="brand-title-light">Mueve</span>
				</h1>
			</div>
			<p class="brand-tagline">
				La ciudad en tu mano
			</p>
		</div>

		<div class="status-section">
			<div class="connecting-status">
				<span class="status-text animate-pulse">Connecting to Engine...</span>
				<div class="location-pulse-container">
					<div class="pulse-ring animate-ping"></div>
					<div class="location-icon-circle animate-pulse-slow">
						<span class="material-symbols-rounded icon-location">location_on</span>
					</div>
				</div>
			</div>
			<div class="version-tag">
				<span class="version-text">v1.0.5</span>
			</div>
		</div>

		<div class="bottom-bar"></div>
	</div>

	<!-- Redirect logic or enter button could go here, for now it's just the splash -->
	<script>
		import { navigate } from 'astro:transitions/client';

		// Simulate splash delay then redirect to home, preserving query params
		setTimeout(() => {
			const currentUrl = new URL(window.location.href);
			const targetUrl = new URL('/home', window.location.origin);
			targetUrl.search = currentUrl.search;
			navigate(targetUrl.toString());
		}, 3000);
	</script>
</MainLayout>

<style>
	.splash-container {
		position: relative;
		width: 100%;
		height: 100vh; /* Full viewport height */
		background: linear-gradient(175deg, #00A9E0 0%, #3ABEF9 45%, #FF9E50 75%, #FF6A00 100%);
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: space-between;
		padding: 4rem 2rem;
		overflow: hidden;
		color: white;
	}

	.grid-overlay {
		position: absolute;
		inset: 0;
		pointer-events: none;
		opacity: 0.1;
		mix-blend-mode: overlay;
		overflow: hidden;
	}

	.h-full { height: 100%; }
	.w-full { width: 100%; }

	.top-spacer {
		height: 2.5rem;
		width: 100%;
	}

	/* Brand Section */
	.brand-section {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
	}

	.brand-logo-container {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-bottom: 1.5rem;
	}

	.brand-icon {
		background-color: white;
		border-radius: 1.5rem; /* rounded-3xl approx */
		padding: 1rem;
		box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.icon-bus {
		color: var(--color-primary);
		font-size: 3.75rem; /* 6xl */
	}

	.brand-title {
		color: white;
		font-size: 3.75rem; /* 6xl */
		font-weight: 800; /* extrabold */
		letter-spacing: -0.025em; /* tracking-tight */
		margin: 0;
		line-height: 1;
	}

	.brand-title-light {
		font-weight: 300; /* light */
	}

	.brand-tagline {
		color: white;
		font-size: 1.25rem; /* xl */
		font-weight: 500;
		text-transform: uppercase;
		letter-spacing: 0.25em; /* premium spacing */
		opacity: 0.9;
		margin-top: 1rem;
	}

	/* Status Section */
	.status-section {
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		position: relative;
	}

	.connecting-status {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
		margin-bottom: 3rem;
		position: relative;
		z-index: 10;
	}

	.status-text {
		color: rgba(255, 255, 255, 0.9);
		font-size: 0.875rem; /* sm */
		font-weight: 500;
		letter-spacing: 0.05em; /* wider */
	}

	.location-pulse-container {
		position: relative;
	}

	.pulse-ring {
		position: absolute;
		inset: 0;
		background-color: rgba(255, 255, 255, 0.3);
		border-radius: 9999px;
		transform: scale(1.5);
	}

	.location-icon-circle {
		position: relative;
		background-color: rgba(255, 255, 255, 0.2);
		backdrop-filter: blur(4px);
		padding: 1rem;
		border-radius: 9999px;
		border: 1px solid rgba(255, 255, 255, 0.3);
	}

	.icon-location {
		color: white;
		font-size: 1.875rem; /* 3xl */
	}

	.version-tag {
		position: absolute;
		bottom: 0;
		right: 0;
	}

	.version-text {
		color: rgba(255, 255, 255, 0.6);
		font-size: 10px;
		font-family: monospace;
		letter-spacing: 0.1em; /* widest */
		text-transform: uppercase;
	}

	.bottom-bar {
		position: absolute;
		bottom: 0.5rem;
		left: 50%;
		transform: translateX(-50%);
		width: 8rem;
		height: 0.375rem;
		background-color: rgba(255, 255, 255, 0.2);
		border-radius: 9999px;
	}

	/* Animations */
	@keyframes float {
		0%, 100% { transform: translateY(0); }
		50% { transform: translateY(-10px); }
	}

	.animate-float {
		animation: float 3s ease-in-out infinite;
	}

	@keyframes ping {
		75%, 100% {
			transform: scale(2);
			opacity: 0;
		}
	}

	.animate-ping {
		animation: ping 1s cubic-bezier(0, 0, 0.2, 1) infinite;
	}

	@keyframes pulse {
		50% { opacity: .5; }
	}

	.animate-pulse {
		animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
	}

	@keyframes pulse-slow {
		50% { opacity: .5; }
	}

	.animate-pulse-slow {
		animation: pulse-slow 3s cubic-bezier(0.4, 0, 0.6, 1) infinite;
	}
</style>
