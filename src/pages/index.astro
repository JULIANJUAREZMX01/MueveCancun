---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="CancúnMueve" hideNav={true}>
	<div class="splash-container">
		<div class="grid-overlay">
			<svg class="h-full w-full" xmlns="http://www.w3.org/2000/svg">
				<defs>
					<pattern height="40" id="grid" patternUnits="userSpaceOnUse" width="40">
						<path d="M 40 0 L 0 0 0 40" fill="none" stroke="white" stroke-width="1"></path>
					</pattern>
				</defs>
				<rect fill="url(#grid)" height="100%" width="100%"></rect>
			</svg>
		</div>

		<div class="top-spacer"></div>

		<div class="brand-section animate-float">
			<div class="brand-logo-container">
				<div class="brand-icon">
					<svg class="icon-bus-svg" width="60" height="60" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M4 16c0 .88.39 1.67 1 2.22V20c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-1h8v1c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-1.78c.61-.55 1-1.34 1-2.22V6c0-3.5-3.58-4-8-4S4 2.5 4 6v10zm3.5 1c-.83 0-1.5-.67-1.5-1.5S6.67 14 7.5 14s1.5.67 1.5 1.5S8.33 17 7.5 17zm9 0c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm1.5-6H6V6h12v5z"/></svg>
				</div>
				<h1 class="brand-title">
					Cancún<span class="brand-title-light">Mueve</span>
				</h1>
			</div>
			<p class="brand-tagline">
				La ciudad en tu mano
			</p>
		</div>

		<div class="status-section">
			<div class="connecting-status">
				<span class="status-text animate-pulse">Connecting to Engine...</span>
				<div class="location-pulse-container">
					<div class="pulse-ring animate-ping"></div>
					<div class="location-icon-circle animate-pulse-slow">
						<svg width="30" height="30" viewBox="0 0 24 24" fill="white" aria-hidden="true"><path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/></svg>
					</div>
				</div>
			</div>
			<div class="version-tag">
				<span class="version-text">v1.0.5</span>
			</div>
		</div>

		<div class="bottom-bar"></div>
	</div>

	<script>
		import { navigate } from 'astro:transitions/client';

		// Simulate splash delay then redirect to home
		setTimeout(() => {
			const currentUrl = new URL(window.location.href);
			const targetUrl = new URL('/home', window.location.origin);
			targetUrl.search = currentUrl.search;
			navigate(targetUrl.toString());
		}, 3000);
	</script>
</MainLayout>

<style>
	.splash-container {
		position: relative;
		width: 100%;
		height: 100vh;
		background: linear-gradient(175deg, #0d9488 0%, #14b8a6 45%, #ccfbf1 75%, #f0fdfa 100%);
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: space-between;
		padding: 4rem 2rem;
		overflow: hidden;
		color: white;
	}

	.grid-overlay {
		position: absolute;
		inset: 0;
		pointer-events: none;
		opacity: 0.1;
		mix-blend-mode: overlay;
		overflow: hidden;
	}

	.h-full { height: 100%; }
	.w-full { width: 100%; }

	.top-spacer { height: 2.5rem; width: 100%; }

	/* Brand Section */
	.brand-section {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
	}

	.brand-logo-container {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-bottom: 1.5rem;
	}

	.brand-icon {
		background-color: white;
		border-radius: 1.5rem;
		padding: 1rem;
		box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.icon-bus-svg {
		color: #0d9488;
	}

	.brand-title {
		color: white;
		font-size: 3.75rem;
		font-weight: 800;
		letter-spacing: -0.025em;
		margin: 0;
		line-height: 1;
	}

	.brand-title-light { font-weight: 300; }

	.brand-tagline {
		color: white;
		font-size: 1.25rem;
		font-weight: 500;
		text-transform: uppercase;
		letter-spacing: 0.25em;
		opacity: 0.9;
		margin-top: 1rem;
	}

	/* Status Section */
	.status-section {
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		position: relative;
	}

	.connecting-status {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
		margin-bottom: 3rem;
		position: relative;
		z-index: 10;
	}

	.status-text {
		color: rgba(255, 255, 255, 0.9);
		font-size: 0.875rem;
		font-weight: 500;
		letter-spacing: 0.05em;
	}

	.location-pulse-container { position: relative; }

	.pulse-ring {
		position: absolute;
		inset: 0;
		background-color: rgba(255, 255, 255, 0.3);
		border-radius: 9999px;
		transform: scale(1.5);
	}

	.location-icon-circle {
		position: relative;
		background-color: rgba(255, 255, 255, 0.2);
		backdrop-filter: blur(4px);
		padding: 1rem;
		border-radius: 9999px;
		border: 1px solid rgba(255, 255, 255, 0.3);
	}

	/* icon-location removed - using inline SVG */

	.version-tag {
		position: absolute;
		bottom: 0;
		right: 0;
	}

	.version-text {
		color: rgba(255, 255, 255, 0.6);
		font-size: 10px;
		font-family: monospace;
		letter-spacing: 0.1em;
		text-transform: uppercase;
	}

	.bottom-bar {
		position: absolute;
		bottom: 0.5rem;
		left: 50%;
		transform: translateX(-50%);
		width: 8rem;
		height: 0.375rem;
		background-color: rgba(255, 255, 255, 0.2);
		border-radius: 9999px;
	}

	/* Animations */
	@keyframes float {
		0%, 100% { transform: translateY(0); }
		50% { transform: translateY(-10px); }
	}
	.animate-float { animation: float 3s ease-in-out infinite; }

	@keyframes ping {
		75%, 100% { transform: scale(2); opacity: 0; }
	}
	.animate-ping { animation: ping 1s cubic-bezier(0, 0, 0.2, 1) infinite; }

	@keyframes pulse { 50% { opacity: .5; } }
	.animate-pulse { animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite; }

	@keyframes pulse-slow { 50% { opacity: .5; } }
	.animate-pulse-slow { animation: pulse-slow 3s cubic-bezier(0.4, 0, 0.6, 1) infinite; }
</style>
