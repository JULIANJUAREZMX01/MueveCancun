---
import MainLayout from '../layouts/MainLayout.astro';
import masterRoutes from '../../public/data/master_routes.json';
---

<MainLayout title="Rutas Disponibles">
  <div class="space-y-8">
    <header class="text-center max-w-2xl mx-auto">
      <h1 class="text-4xl font-display font-bold text-gray-900 mb-4">
        Rutas Disponibles
      </h1>
      <p class="text-gray-600">
        Consulta el listado completo de rutas de transporte pÃºblico en CancÃºn.
      </p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {masterRoutes.rutas.map((ruta) => (
        <a href={`/ruta/${ruta.id}`} class="sunny-card p-6 hover:shadow-xl transition-shadow group">
          <div class="flex items-center space-x-4 mb-4">
            <div class="w-12 h-12 rounded-full flex items-center justify-center text-2xl shadow-inner" style={`background-color: ${ruta.color}20`}>
              ğŸšŒ
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900 group-hover:text-primary-600 transition-colors">
                Ruta {ruta.id}
              </h3>
              <p class="text-sm text-gray-500">{ruta.nombre}</p>
            </div>
          </div>

          <div class="flex justify-between items-center pt-4 border-t border-gray-100">
            <span class="text-primary-600 font-bold">${ruta.tarifa.toFixed(2)} MXN</span>
            <span class="text-xs font-medium bg-green-100 text-green-700 px-2 py-1 rounded">Activa</span>
          </div>
        </a>
      ))}
    </div>
  </div>
</MainLayout>
