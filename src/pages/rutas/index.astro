---
import MainLayout from '../../layouts/MainLayout.astro';
import SkeletonLoader from '../../components/ui/SkeletonLoader.astro';
---

<MainLayout title="Cat√°logo de Rutas">
  <div class="space-y-6 animate-fade-in pb-10">
    <!-- Header -->
    <div class="pt-6 pb-2">
      <a href="/" class="inline-flex items-center text-sm font-bold text-slate-500 hover:text-primary-600 mb-4 transition-colors">
        ‚Üê Volver al Inicio
      </a>
      <h1 class="text-2xl font-display font-black text-deep-navy tracking-tight mb-1">
        Cat√°logo de Rutas
      </h1>
      <p class="text-slate-500 font-medium text-sm">
        Todas las opciones de transporte en Canc√∫n
      </p>
    </div>

    <!-- Loading State -->
    <div id="catalog-loader" class="space-y-4">
        <SkeletonLoader height="h-32" />
        <SkeletonLoader height="h-32" />
        <SkeletonLoader height="h-32" />
    </div>

    <!-- List Container -->
    <div id="routes-container" class="space-y-4 hidden">
       <!-- Routes injected here -->
    </div>

  </div>
</MainLayout>

<script>
  let get_all_routes;
  const loader = document.getElementById('catalog-loader');
  const container = document.getElementById('routes-container');

  const TRANSPORT_LABELS = {
    "Bus": "Autob√∫s",
    "Combi": "Combi",
    "Van": "Van / Colectivo",
    "ADO": "ADO",
    "PlayaExpress": "Playa Express",
    // Legacy support
    "Bus_Urban": "Autob√∫s Urbano",
    "Bus_HotelZone": "Autob√∫s Zona Hotelera",
    "Combi_Municipal": "Combi Municipal",
    "ADO_Airport": "ADO Aeropuerto",
    "Playa_Express": "Playa Express"
  };

  function getTransportLabel(type) {
    return TRANSPORT_LABELS[type] || type;
  }

  function renderRoutes(routes) {
    if (!container) return;
    container.innerHTML = '';

    routes.forEach(route => {
        // Handle badge serialization if needed
        const badgesHtml = route.badges.map(b => `<span class="text-xs bg-slate-100 px-1 rounded">${b}</span>`).join('');

        // Stops Logic
        let stopsPreview = `${route.origin_hub} ‚ûî ${route.dest_hub}`;
        if (route.stops && route.stops.length > 0) {
             stopsPreview = `${route.stops[0]} ‚ûî ${route.stops[route.stops.length - 1]}`;
        }

        const html = `
          <div class="p-4 bg-white rounded-lg shadow-sm border border-slate-100 active:scale-98 transition-transform mb-3 animate-slide-up">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <span class="inline-block px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800 mb-1">
                  ${getTransportLabel(route.transport_type)}
                </span>
                <h3 class="font-bold text-slate-800">${route.name}</h3>

                <!-- Meta Info Row -->
                <div class="mt-2 flex flex-wrap gap-x-4 gap-y-2 text-xs text-slate-600">
                    ${route.operator ? `
                    <div class="flex items-center gap-1">
                        <span>üöå</span> <span class="font-medium">${route.operator}</span>
                    </div>` : ''}
                    ${route.frequency ? `
                     <div class="flex items-center gap-1">
                        <span>‚è±Ô∏è</span> <span>${route.frequency}</span>
                    </div>` : ''}
                    ${route.schedule ? `
                     <div class="flex items-center gap-1">
                        <span>üïí</span> <span>${route.schedule}</span>
                    </div>` : ''}
                </div>

                <div class="flex gap-2 mt-2 flex-wrap">
                   ${badgesHtml}
                </div>
              </div>
              <div class="text-right ml-2 shrink-0">
                <span class="inline-flex items-center px-2 py-1 rounded bg-emerald-100 text-emerald-800 text-xs font-bold font-mono whitespace-nowrap">
                    üí∞ $${route.price.toFixed(2)}
                </span>
                <p class="text-xs text-slate-500 mt-1">${route.duration}</p>
              </div>
            </div>

            <!-- Stops Preview -->
            <div class="mt-3 pt-3 border-t border-slate-50 text-xs text-slate-500 flex items-center gap-1">
                <span>üìç</span> <span class="truncate">${stopsPreview}</span>
            </div>
          </div>
        `;
        container.innerHTML += html;
    });

    // Toggle Visibility
    if (loader) loader.classList.add('hidden');
    if (container) container.classList.remove('hidden');
  }

  async function init() {
    try {
      console.log("Initializing WASM for Catalog...");
      const wasmPath = new URL('/wasm/route_calculator/route_calculator.js', window.location.href).href;
      const module = await import(/* @vite-ignore */ wasmPath);
      await module.default();
      get_all_routes = module.get_all_routes;

      const allRoutes = get_all_routes();
      console.log("Loaded Routes:", allRoutes);
      renderRoutes(allRoutes);

    } catch (e) {
      console.error("WASM Catalog Load Error:", e);
      if (container) container.innerHTML = `<div class="text-red-500 font-bold">Error loading catalog.</div>`;
    }
  }

  document.addEventListener('astro:page-load', init);
</script>
