---
import MainLayout from '../../layouts/MainLayout.astro';
import routesData from '../../data/routes.json';

// Types
interface Route {
  id: string;
  name: string;
  price: number;
  transport_type: string;
  operator?: string;
  frequency?: string;
  schedule?: string;
  duration?: string;
  badges: string[];
  stops: string[];
  origin_hub?: string;
  dest_hub?: string;
}

const TRANSPORT_LABELS: Record<string, string> = {
  "Bus": "Autob√∫s",
  "Combi": "Combi",
  "Van": "Van / Colectivo",
  "ADO": "ADO",
  "PlayaExpress": "Playa Express",
  // Legacy support
  "Bus_Urban": "Autob√∫s Urbano",
  "Bus_HotelZone": "Autob√∫s Zona Hotelera",
  "Combi_Municipal": "Combi Municipal",
  "ADO_Airport": "ADO Aeropuerto",
  "Playa_Express": "Playa Express"
};

const getTransportLabel = (type: string) => TRANSPORT_LABELS[type] || type;

const transformRoute = (raw: any): Route => {
  // Derive transport type from ID
  let transport_type = "Bus";
  if (raw.id.startsWith("CR")) transport_type = "Combi";
  else if (raw.id.startsWith("VAN") || raw.id.includes("PLAYA_EXPRESS")) transport_type = "Van";
  else if (raw.id.startsWith("ADO")) transport_type = "ADO";

  // Format Schedule
  let schedule = "";
  if (raw.horario) {
     if (typeof raw.horario === 'string') {
        schedule = raw.horario;
     } else {
        // Handle inconsistent keys (inicio_oficial vs inicio)
        const start = raw.horario.inicio_oficial || raw.horario.inicio || "undefined";
        const end = raw.horario.fin_oficial || raw.horario.fin || "undefined";

        if (start !== "undefined" && end !== "undefined") {
            schedule = `${start} - ${end}`;
            if (raw.horario.guardia_nocturna) {
                schedule += ` (${raw.horario.guardia_nocturna})`;
            }
        }
     }
  }

  // Stops (Handle inconsistent keys: 'parada' vs 'nombre')
  const stops = raw.paradas ? raw.paradas.map((p: any) => p.parada || p.nombre) : [];

  return {
    id: raw.id,
    name: raw.nombre,
    price: raw.tarifa,
    transport_type,
    operator: "", // Not explicitly in JSON usually, maybe inferred?
    frequency: raw.frecuencia_minutos ? `${raw.frecuencia_minutos} min` : undefined,
    schedule,
    duration: "Estimado", // Default text
    badges: raw.advertencias_usuario || [],
    stops,
    origin_hub: stops[0] || "Origen",
    dest_hub: stops[stops.length - 1] || "Destino"
  };
};

// Filter and Transform
// Access 'rutas' array from the JSON structure
const routes: Route[] = (routesData.rutas || []).map(transformRoute);
---

<MainLayout title="Cat√°logo de Rutas">
  <div class="space-y-6 animate-fade-in pb-10">
    <!-- Header -->
    <div class="pt-6 pb-2">
      <a href="/" class="inline-flex items-center text-sm font-bold text-slate-500 hover:text-primary-600 mb-4 transition-colors">
        ‚Üê Volver al Inicio
      </a>
      <h1 class="text-2xl font-display font-black text-deep-navy tracking-tight mb-1">
        Cat√°logo de Rutas
      </h1>
      <p class="text-slate-500 font-medium text-sm">
        Todas las opciones de transporte en Canc√∫n
      </p>
    </div>

    <!-- List Container (Server Rendered) -->
    <div class="space-y-4">
       {routes.map(route => {
          let stopsPreview = `${route.origin_hub} ‚ûî ${route.dest_hub}`;

          return (
          <div class="p-4 bg-white rounded-lg shadow-sm border border-slate-100 active:scale-98 transition-transform mb-3 animate-slide-up">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <span class="inline-block px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800 mb-1">
                  {getTransportLabel(route.transport_type)}
                </span>
                <h3 class="font-bold text-slate-800">{route.name}</h3>

                <!-- Meta Info Row -->
                <div class="mt-2 flex flex-wrap gap-x-4 gap-y-2 text-xs text-slate-600">
                    {route.operator && (
                    <div class="flex items-center gap-1">
                        <span>üöå</span> <span class="font-medium">{route.operator}</span>
                    </div>
                    )}
                    {route.frequency && (
                     <div class="flex items-center gap-1">
                        <span>‚è±Ô∏è</span> <span>{route.frequency}</span>
                    </div>
                    )}
                    {route.schedule && (
                     <div class="flex items-center gap-1">
                        <span>üïí</span> <span>{route.schedule}</span>
                    </div>
                    )}
                </div>

                <div class="flex gap-2 mt-2 flex-wrap">
                   {route.badges.map(badge => (
                     <span class="text-xs bg-slate-100 px-1 rounded">{badge}</span>
                   ))}
                </div>
              </div>
              <div class="text-right ml-2 shrink-0">
                <span class="inline-flex items-center px-2 py-1 rounded bg-emerald-100 text-emerald-800 text-xs font-bold font-mono whitespace-nowrap">
                    üí∞ ${route.price.toFixed(2)}
                </span>
                <p class="text-xs text-slate-500 mt-1">{route.duration}</p>
              </div>
            </div>

            <!-- Stops Preview -->
            <div class="mt-3 pt-3 border-t border-slate-50 text-xs text-slate-500 flex items-center gap-1">
                <span>üìç</span> <span class="truncate">{stopsPreview}</span>
            </div>
          </div>
          );
       })}
    </div>

  </div>
</MainLayout>
