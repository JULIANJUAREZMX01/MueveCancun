---
import MainLayout from '../../layouts/MainLayout.astro';
import routesData from '../../data/routes.json';

const TRANSPORT_LABELS = {
  "Bus": "Autob√∫s",
  "Combi": "Combi",
  "Van": "Van / Colectivo",
  "ADO": "ADO",
  "PlayaExpress": "Playa Express",
  // Legacy support
  "Bus_Urban": "Autob√∫s Urbano",
  "Bus_Urbano_Isla": "Autob√∫s Zona Hotelera", // Mapped based on context
  "Bus_HotelZone": "Autob√∫s Zona Hotelera",
  "Combi_Municipal": "Combi Municipal",
  "ADO_Airport": "ADO Aeropuerto",
  "Playa_Express": "Playa Express",
  "Van_Foranea": "Van For√°nea",
  "Bus_Foraneo": "Autob√∫s For√°neo"
};

function getTransportLabel(type) {
  return TRANSPORT_LABELS[type] || type;
}

// Transform data for template
const routes = routesData.rutas.map(route => {
    // Stops Logic
    let stops = [];
    if (route.paradas && Array.isArray(route.paradas)) {
        stops = route.paradas.map(p => p.parada || p.nombre || "Parada");
    }

    let stopsPreview = `${route.origin_hub || stops[0] || "?"} ‚ûî ${route.dest_hub || stops[stops.length - 1] || "?"}`;
    if (stops.length > 0) {
         stopsPreview = `${stops[0]} ‚ûî ${stops[stops.length - 1]}`;
    }

    // Schedule handling
    let schedule = route.horario;
    if (typeof schedule === 'object' && schedule !== null) {
        schedule = `${schedule.inicio || schedule.inicio_oficial} - ${schedule.fin || schedule.fin_oficial}`;
    }

    // Frequency handling
    let frequency = route.frecuencia_minutos ? `${route.frecuencia_minutos} min` : route.frecuencia;

    // Badges (Synthesized based on properties)
    const badges = [];
    if (route.tipo_transporte?.includes('HotelZone') || route.tipo_transporte?.includes('Isla')) badges.push('Zona Hotelera');
    if (route.tipo_transporte?.includes('Airport')) badges.push('Aeropuerto');

    return {
        id: route.id,
        name: route.nombre,
        transport_type: route.tipo_transporte,
        transport_label: getTransportLabel(route.tipo_transporte) || "Transporte",
        price: route.tarifa,
        duration: route.duracion_minutos ? `${route.duracion_minutos} min` : (route.duration || "Variable"),
        operator: route.empresa || route.empresas?.[0] || route.operator,
        schedule: schedule,
        frequency: frequency,
        stops_preview: stopsPreview,
        badges: badges
    };
});
---

<MainLayout title="Cat√°logo de Rutas">
  <div class="space-y-6 animate-fade-in pb-10">
    <!-- Header -->
    <div class="pt-6 pb-2">
      <a href="/" class="inline-flex items-center text-sm font-bold text-slate-500 hover:text-primary-600 mb-4 transition-colors">
        ‚Üê Volver al Inicio
      </a>
      <h1 class="text-2xl font-display font-black text-deep-navy tracking-tight mb-1">
        Cat√°logo de Rutas
      </h1>
      <p class="text-slate-500 font-medium text-sm">
        Todas las opciones de transporte en Canc√∫n
      </p>
    </div>

    <!-- List Container (Server Rendered) -->
    <div id="routes-container" class="space-y-4">
       {routes.map(route => (
          <div class="p-4 bg-white rounded-lg shadow-sm border border-slate-100 active:scale-98 transition-transform mb-3 animate-slide-up">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <span class="inline-block px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800 mb-1">
                  {route.transport_label}
                </span>
                <h3 class="font-bold text-slate-800">{route.name}</h3>

                <!-- Meta Info Row -->
                <div class="mt-2 flex flex-wrap gap-x-4 gap-y-2 text-xs text-slate-600">
                    {route.operator && (
                    <div class="flex items-center gap-1">
                        <span>üöå</span> <span class="font-medium">{route.operator}</span>
                    </div>
                    )}
                    {route.frequency && (
                     <div class="flex items-center gap-1">
                        <span>‚è±Ô∏è</span> <span>{route.frequency}</span>
                    </div>
                    )}
                    {route.schedule && (
                     <div class="flex items-center gap-1">
                        <span>üïí</span> <span>{route.schedule}</span>
                    </div>
                    )}
                </div>

                <div class="flex gap-2 mt-2 flex-wrap">
                   {route.badges.map(badge => (
                       <span class="text-xs bg-slate-100 px-1 rounded">{badge}</span>
                   ))}
                </div>
              </div>
              <div class="text-right ml-2 shrink-0">
                <span class="inline-flex items-center px-2 py-1 rounded bg-emerald-100 text-emerald-800 text-xs font-bold font-mono whitespace-nowrap">
                    üí∞ ${typeof route.price === 'number' ? route.price.toFixed(2) : route.price}
                </span>
                <p class="text-xs text-slate-500 mt-1">{route.duration}</p>
              </div>
            </div>

            <!-- Stops Preview -->
            <div class="mt-3 pt-3 border-t border-slate-50 text-xs text-slate-500 flex items-center gap-1">
                <span>üìç</span> <span class="truncate">{route.stops_preview}</span>
            </div>
          </div>
       ))}
    </div>

  </div>
</MainLayout>
